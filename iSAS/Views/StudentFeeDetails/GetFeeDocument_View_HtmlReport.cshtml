                                            <th class="text-right" style="padding-right:1%;">DUE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.HeadDetails.Count; i++)
                                        {
                                            <tr>
                                                <td style="text-align:left;padding-left:2%;">@Html.DisplayFor(r => Model.HeadDetails[i].Duration)</td>
                                                <td style="text-align:left;padding-left:2%;">@Html.DisplayFor(r => Model.HeadDetails[i].HeadName)</td>
                                                <td class="text-right" style="padding-right:1%;">@Html.DisplayFor(r => Model.HeadDetails[i].Due)</td>
                                            </tr>
                                        }
