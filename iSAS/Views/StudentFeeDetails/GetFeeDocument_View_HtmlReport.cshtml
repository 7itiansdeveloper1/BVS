                                                                    <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.Excess) </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="height:50px;vertical-align:bottom;text-align:left;padding-left:2%;">
                                <strong>Cashier Sign.</strong>
                            </td>
                            <td colspan="2" style="height:50px;vertical-align:bottom;text-align:right;padding-right:2%;">
                                <strong>Depositor Sign.</strong>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
