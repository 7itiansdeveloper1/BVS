                                <table style="width:100%;">
                                    <tr>
                                        <td style="text-align:left;padding-left:2%;"><strong>Receipt No. : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.ReceiptNo) <small>(@Html.DisplayFor(r => Model.ReceiptStatus))</small> </strong></td>
