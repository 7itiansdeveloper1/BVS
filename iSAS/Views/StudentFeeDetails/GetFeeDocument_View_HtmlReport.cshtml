                                            <td colspan="3" style="padding-left:2%;">
                                                <table style="width:100%;">
                                                    <tr>
                                                        <td style="width:60%;height:70px;vertical-align:top;text-align:left;padding-left:2%;">
                                                            <strong>
                                                                Paid By : @Html.DisplayFor(r => Model.StudentInfo.PaymentMode)
