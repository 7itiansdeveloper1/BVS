@model ISas.Entities.TimeTable_Entities.TimeTable_SubjectMasterModel

<!-- /.box -->
<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Time Table-Subjects</h5>
        </div>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>S. No</th>
                    <th>SubjectName</th>
                    <th>Print Order</th>
                    <th>Is Active</th>
                    <th>Teachers</th>
                    <th>Classes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.timetablesubjectList.Count > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.timetablesubjectList.Count(); i++)
                    {
                <tr>
                    <td>@Html.DisplayFor(r => count)</td>
                    <td>
                        @Html.HiddenFor(r => Model.timetablesubjectList[i].SubjectId)
                        @Html.DisplayFor(r => Model.timetablesubjectList[i].SubjectName)
                    </td>
                    <td>@Html.DisplayFor(r => Model.timetablesubjectList[i].PrintOrder)</td>
                    <td>@Html.DisplayFor(r => Model.timetablesubjectList[i].IsActive)</td>
                    <td>@Html.DisplayFor(r => Model.timetablesubjectList[i].subjectTeacher)</td>
                    <td>@Html.DisplayFor(r => Model.timetablesubjectList[i].timeTableClass)</td>

                    <td class="text-center">
                        @Html.EncodedActionLink(" ", "Updation", "TimeTable_SubjectMaster", new { subjectId = Model.timetablesubjectList[i].SubjectId }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Subject" })
                    </td>
                </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
