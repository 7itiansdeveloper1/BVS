@model ISas.Entities.TimeTable_Entities.TimeTable_SubjectMasterModel
@{
    ViewBag.Title = "Update";
}

<section class="content-header">
    <h1>
        Time Table Subject Master <small>(UPDATE)</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Time Table</li>
        <li><a href="@Url.Action("New", "TimeTable_SubjectMaster")">Subject Master</a> </li>
        <li class="active">Update</li>
    </ol>
</section>
<section class="content">
    @using (Html.BeginForm("TimeTable_SubjectMaster_CRUD", "TimeTable_SubjectMaster", FormMethod.Post, htmlAttributes: new { }))
    {
        @Html.HiddenFor(r => Model.timeTableSubject.SubjectId)
        <div class="box box-success">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.timeTableSubject.SubjectName)<i class="mandateLbl">*</i></label>
                            <div class="select">
                                @Html.TextBoxFor(m => m.timeTableSubject.SubjectName, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(r => Model.timeTableSubject.SubjectName, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.timeTableSubject.PrintOrder)<i class="mandateLbl">*</i></label>
                            <div class="select">
                               <input type="number" id="timeTableSubject_PrintOrder" name="timeTableSubject.PrintOrder" class="form-control" value="@Model.timeTableSubject.PrintOrder" />
                                @Html.ValidationMessageFor(r => Model.timeTableSubject.PrintOrder, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-2">
                        <div class="checkbox">
                            <br /><label>
                                @Html.CheckBoxFor(r => Model.timeTableSubject.IsActive)@Html.LabelFor(r => Model.timeTableSubject.IsActive)
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.timeTableSubject.groupName)</label>
                            <div class="select">
                                @Html.TextBoxFor(m => m.timeTableSubject.groupName, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(r => Model.timeTableSubject.groupName, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="box-footer">
                <button class="btn btn-warning" id="savebutton" type="button" onclick="DoAjaxPostAndMore(this);">UPDATE</button>
                <button class="btn btn-default" type="button" onclick="window.location.reload()">RESET</button>
            </div>
        </div>
    }
    @{ Html.RenderAction("LandingPage", "TimeTable_SubjectMaster"); }
</section>

<script>
    function DoAjaxPostAndMore(btnClicked) {
        var $form = $(btnClicked).parents('form');
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: $form.attr('action'),
            data: $form.serialize(),
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                if (response.status == 'success') {
                    OpenMessegeAutoHideDiv(response.Msg, response.Color);
                    setTimeout(function () { window.location = "../TimeTable_SubjectMaster/New"; }, $('#hddnReloadTime').val());
                }
                else {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnModelStateNotValid').val());
                    AddErrorAttributeCSS(response.ErrorList); //Available in CustomCommon.js
                    AddValidAttributeCSS(response.ValidKeyList); //Available in CustomCommon.js
                }
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>

