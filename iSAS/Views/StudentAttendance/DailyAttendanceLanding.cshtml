@model ISas.Web.ViewModels.DailyAttendanceLandingViewModel

@{

    ViewBag.Title = "Daily AdmissionLanding";
}
<section class="content-header">
    <h1>
        Daily Attendance
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Student Attendance</li>
        <li class="active">Daily Attendance</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <span class="pull-right">
                @Html.ActionLink("ADD NEW", "DailyAttendance", "StudentAttendance", null, new { @class = "btn btn-primary btn-sm" })
            </span>
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered" id="AttemdanceSummary">
                <thead>
                    <tr>
                        <th>Class</th>
                        <th>Class Teacher</th>
                        <th>Attendance Marked By</th>
                        <th>Attendance Marking Time</th>
                        <th>Class Strength</th>
                        <th>Present</th>
                        <th>Absent</th>
                        <th>Leave</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model.DailyAttenanceSummaryList)
                    {

                        <tr class="abc">
                            <td>@item.ClassName </td>
                            <td>@item.ClassTeacherName</td>
                            <td>@item.AttendanceMarkedBy </td>
                            <td>@item.AttendanceTime </td>
                            <td>@item.ClassTotalStrength </td>
                            <td>@item.ClassPresentStudentCount </td>
                            <td>@item.ClassAbsentStudentCount </td>
                            <td>@item.ClassLeaveStudentCount </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#AttemdanceSummary').DataTable({
        });
    });
</script>

