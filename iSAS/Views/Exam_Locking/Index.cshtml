@model ISas.Entities.Exam_Entities.Exam_LockingModels 
@{
   // Layout = null;
}
<section class="content-header">
    <h1>Assessment Locking</h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Examination</li>
        <li class="active">Assessment Locking</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">

        <div class="box-body">
            <div class="row">

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label for="">@Html.LabelFor(r => Model.classList)<i class="mandateLbl">*</i></label>
                        <div class="select">

                            @Html.DropDownListFor(m => Model.SelectedClassId, Model.classList, htmlAttributes: new { @class = "form-control select2", style = "width:100%;", onchange = "getAssessmentList()" })
                            @Html.ValidationMessageFor(r => Model.classList, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div id="divMarkList">
                        
                    </div>    
                </div>
                    
                </div>



            </div>
        
    </div>
</section>
<script>

   
    

    function getAssessmentList() {
        $.ajax({
            url: '../Exam_Locking/_AssessmentListPartial',
            data: {
                classId: $('#SelectedClassId').val() 
            },
            type: 'get',
            success: (function (data) {
                $('#divMarkList').empty();
                $('#divMarkList').html(data);
            })
        })
    }


</script>