@using ISas.Entities.Examination_Entities;
@model ISas.Entities.Examination_Entities.Examination_ReportCard_HtmlPrintModel
@{
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
    Examination_ReportCard_StudentDetailsModel studDetails = new Examination_ReportCard_StudentDetailsModel();
    Examination_ReportCard_ResultDetailsModel resultDetails = new Examination_ReportCard_ResultDetailsModel();
}


<!DOCTYPE html>
<html>
<head>
    <style>
        .reportCardContent {
            /*height: 842px;
        width: 595px;*/
            /* to centre page on screen*/
            margin-left: 0.5%;
            margin-right: 0.5%;
            border: 2px solid black;
        }

        .custTable {
            margin-left: 0%;
            margin-right: 3%;
            margin-top: 2%;
            width:100%;
            font-size:16px;
            font-family:Arial;
        }
        td {
            padding-left: 5px;
            padding-right: 3px;
            padding-top: 5px;
            padding-bottom: 5px;
        }
        th {
            padding-left: 5px;
            padding-right: 3px;
            padding-top: 5px;
            padding-bottom: 5px;
        }
    </style>
</head>
<body style="margin:0;padding:0" class="container-fluid body-content">
    @for (int i = 0; i < Model.DistinctERPNos.Count; i++)
    {
        {
            studDetails = @Model.StudentDetailsList.Where(r => r.ERP == Model.DistinctERPNos[i]).FirstOrDefault();
            resultDetails = @Model.ResultDetailList.Where(r => r.ERPNo == Model.DistinctERPNos[i]).FirstOrDefault();
        }
        if (i != 0)

        {
            <div style="page-break-after:always;">&nbsp;</div>
        }
        <div class="reportCardContent container-fluid body-content">
            <table class="custTable" style="border-bottom:1px solid black;margin-right:2%;" cellpadding="0" cellspacing="0">
                <tr>
                    <td style="height:150px;"><img src="~/@Model.HeaderDetails.CBSELogo" height="120" width="120" /></td>
                    <td style="height:150px;" class="text-center text-bold">
                        <span style="font-size:30px;">@Html.DisplayFor(r => Model.HeaderDetails.Header1)</span><br />
                        <span style="font-size:24px;">Academic Session: @Html.DisplayFor(r => Model.HeaderDetails.SessionName)</span><br />
                        <span style="font-size:18px;">NA</span>
                    </td>
                    <td style="height:150px;margin-right:2%;"><img src="~/@Model.HeaderDetails.LogoURL" height="120" width="120" /></td>
                </tr>
            </table>
            <table class="custTable" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <table style="width:100%;">
                            <tr>
                                <td style="min-width:150px;max-width:150px;">Roll No</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.RollNo)</td>
                                <td style="min-width:150px;max-width:150px;">&nbsp;</td>
                                <td style="min-width:200px;max-width:200px;">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="min-width:150px;max-width:150px;">Student's Name</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.Student)</td>
                                <td style="min-width:150px;max-width:150px;">&nbsp;</td>
                                <td style="min-width:200px;max-width:200px;">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="min-width:150px;max-width:150px;">Father’s/Guardian's Name</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.FAther)</td>
                                <td style="min-width:150px;max-width:150px;">Mother's Name</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.Mother)</td>
                            </tr>
                            <tr>
                                <td style="min-width:150px;max-width:150px;">Date of Birth</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.DOB)</td>
                                <td style="min-width:150px;max-width:150px;">&nbsp;</td>
                                <td style="min-width:200px;max-width:200px;">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="min-width:150px;max-width:150px;">Class</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.Class)</td>
                                <td style="min-width:150px;max-width:150px;">Section</td>
                                <td style="min-width:200px;max-width:200px;"> : @Html.DisplayFor(r => studDetails.Class)</td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <img src="~/@studDetails.StudentImage" height="120" width="120" />
                    </td>
                </tr>
            </table>
            <table class="custTable" border="1" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th><span style="font-size:18px;">Scholastic Areas:</span></th>
                        <th class="text-center" colspan="6"><span style="font-size:18px;">Term -1 (100 marks)</span></th>
                    </tr>
                    <tr>
                        <th><span style="font-size:18px;">Subject Name</span></th>
                        <th>Per Test (10)</th>
                        <th>Note Book (5)</th>
                        <th>Sub Enrichment (5)</th>
                        <th>Half-Yearly Exam (80)</th>
                        <th>Marks obtained (100)</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mark in Model.MarksOrGradeList.Where(r => r.ERP == Model.DistinctERPNos[i]))
                    {
                        <tr>
                            <td>@Html.DisplayFor(r => mark.SubjectDisplayName)</td>
                            <td class="text-center">@Html.DisplayFor(r => mark.PT)</td>
                            <td class="text-center">@Html.DisplayFor(r => mark.NoteBook)</td>
                            <td class="text-center">@Html.DisplayFor(r => mark.SEA)</td>
                            <td class="text-center">@Html.DisplayFor(r => mark.HalfYearly)</td>
                            <td class="text-center">@Html.DisplayFor(r => mark.Total)</td>
                            <td class="text-center">@Html.DisplayFor(r => mark.Grade)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <table class="custTable"  border="1" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        <th>Co-Scholastic Areas: Term - 1 [on a 3-point (A-C) gradingscale]</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cosch in Model.CoScholasticAreasList.Where(r => r.ERP == Model.DistinctERPNos[i] && r.IsDiscipline == false))
                    {
                        <tr>
                            <td>@Html.DisplayFor(r => cosch.SubjectDisplayName)</td>
                            <td class="text-center">@Html.DisplayFor(r => cosch.Term1)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <table class="custTable"  border="1" cellpadding="0" cellspacing="0">
                <tbody>
                    @foreach (var cosch in Model.CoScholasticAreasList.Where(r => r.ERP == Model.DistinctERPNos[i] && r.IsDiscipline == true))
                    {
                        <tr>
                            <td>@Html.DisplayFor(r => cosch.SubjectDisplayName)</td>
                            <td>@Html.DisplayFor(r => cosch.Term1)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <table class="custTable" border="1" cellpadding="0" cellspacing="0">
                <tr>
                    <td><span style="min-width:130px;max-width:130px;">Orientation Programme attended :</span><span style="min-width:70px;max-width:70px;">NA</span></td>
                    <td><span style="min-width:130px;max-width:130px;">No of PTM's attended :</span><span style="min-width:70px;max-width:70px;">@Html.DisplayFor(r => studDetails.PTMAttendance)</span></td>
                    <td><span style="min-width:130px;max-width:130px;">Total Attendance :</span><span style="min-width:70px;max-width:70px;">@Html.DisplayFor(r => studDetails.Attendance)</span></td>
                </tr>
            </table>
            <table class="custTable" style="max-height:150px;min-height:150px;" cellpadding="0" cellspacing="0">
                <tr><td>Class Teacher’s Remarks & Achievements:</td></tr>
                <tr><td><p><i>@Html.DisplayFor(r => studDetails.Remark)</i></p></td></tr>
            </table>
            <table class="custTable" cellpadding="0" cellspacing="0">
                <tr><td>Result :  @Html.DisplayFor(r => resultDetails.Result)</td></tr>
            </table>
            <table class="custTable" style="border-bottom:2px solid black;" cellpadding="0" cellspacing="0">
                <tr>
                    <td>Place :  @Html.DisplayFor(r => Model.HeaderDetails.Place)</td>
                    <td>Signature of</td>
                    <td>Signature of</td>
                </tr>
                <tr>
                    <td>Date :  @Html.DisplayFor(r => Model.HeaderDetails.ReportcardDate)</td>
                    <td>CLASS TEACHER</td>
                    <td>PRINCIPAL</td>
                </tr>
            </table>

            @*Static Content*@

            <div style="margin-top:2%;">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h3>Instructions</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4>Grading scale for scholastic areas: Grades are awarded on a 8- point grading scale as follows -</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="custTable" border="1" cellpadding="0" cellspacing="0">
                            <tr>
                                <td class="text-right">MARKS RANGE</td>
                                <td class="text-center">91 - 100</td>
                                <td class="text-center">81 - 90</td>
                                <td class="text-center">71 - 80</td>
                                <td class="text-center">61 - 70</td>
                                <td class="text-center">51 - 60</td>
                                <td class="text-center">41 - 50</td>
                                <td class="text-center">33 - 40</td>
                                <td class="text-center">32 & Below</td>
                            </tr>
                            <tr>
                                <td class="text-right">GRADE</td>
                                <td class="text-center">A1</td>
                                <td class="text-center">A2</td>
                                <td class="text-center">B1</td>
                                <td class="text-center">B2</td>
                                <td class="text-center">C1</td>
                                <td class="text-center">C2</td>
                                <td class="text-center">D</td>
                                <td class="text-center">E(Needs improvement)</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4>Grading scale for Co-Scholastic areas: Grades are awarded on a 3- point grading scale as follows -</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="custTable" border="1" cellpadding="0" cellspacing="0">
                            <tr>
                                <td class="text-right">MARKS RANGE</td>
                                <td class="text-center">71 - 100</td>
                                <td class="text-center">34 - 70</td>
                                <td class="text-center">0 - 33</td>
                            </tr>
                            <tr>
                                <td class="text-right">GRADE</td>
                                <td class="text-center">A</td>
                                <td class="text-center">B</td>
                                <td class="text-center">C</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        &nbsp;
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>

