<script>
    function SameAsCorres_ChkBoxChange() {
        if ($('#SameAsCorresAddressChkBox').is(':checked')) {
            var stateHtml = '<option value  = "">--Select--</option>';
            stateHtml += '<option selected="selected" value = "' + $('#Student_CorrState').val() + '">' + $('#Student_CorrState option:selected').text() + '</option>';

            var cityHtml = '<option value = "">--Select--</option>';
            cityHtml += '<option selected="selected" value = "' + $('#Student_CorrCity').val() + '">' + $('#Student_CorrCity option:selected').text() + '</option>';

            $('#Student_PermAdd').val($('#Student_CorrAdd').val());
            $('#Student_PermPinCode').val($('#Student_CorrPinCode').val());
            $('#Student_PermMobile').val($('#Student_CorrMobile').val());

            $('#Student_PermCountry').val($('#Student_CorrCountry').val());
            $('#Student_PermState').html(stateHtml);
            $('#Student_PermCity').html(cityHtml);

            $('#Student_PermArea').val($('#Student_CorrArea').val()).change();

        }
        else {
            $('#Student_PermAdd').val('');
            $('#Student_PermPinCode').val('');
            $('#Student_PermMobile').val('');

            $('#Student_PermCountry').val('');
            $('#Student_PermState').html('<option value  = "">--Select--</option>');
            $('#Student_PermCity').html('<option value  = "">--Select--</option>');
            $('#Student_PermArea').val('').change();
        }
    }

    function DoAjaxPostAndMore(btnClicked) {
        var $form = $(btnClicked).parents('form');
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: $form.attr('action'),
            data: $form.serialize(),
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                if (response.status == 'success') {
                    OpenMessegeAutoHideDiv(response.Msg, response.Color);
                    if (response.Color == 'Success') {
                        window.open('/Student_Registration/RegistrationSlip_Print?RegId=' + response.RegId);
                        setTimeout(function () { window.location.reload(); }, 1000);
                    }
                } else {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnModelStateNotValid').val());
                    AddErrorAttributeCSS(response.ErrorList); //Available in CustomCommon.js
                    AddValidAttributeCSS(response.ValidKeyList); //Available in CustomCommon.js
                }
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>