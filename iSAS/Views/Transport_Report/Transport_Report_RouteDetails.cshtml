    function printBusStudentDetails() {
        var html = $('#tblPrintHeader_BusStudent').html();
        html += $('#transportStudentMainDiv').html();
        var w = window.open();
        $(w.document.body).html(html);
        w.print();
        //w.close();
    }

    function GetBusStudentDetails(VehID, RouteName, DriverName) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: '../Transport_Report/_Transport_Report_BusStudentDetails',
            data: { VehID: VehID, RouteName, DriverName },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                $('#busStudentDetails').html(response);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>