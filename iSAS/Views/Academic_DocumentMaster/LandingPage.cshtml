@using ISas.Web.Models;
@model List<ISas.Entities.Academic.Academic_DocumentMasterModel>
@{
    int rowlength = 0;
    if (Model != null && Model.Count > 0)
    {
        rowlength = Model.Count;
    }

}
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Documents List</h5>
        </div>
    </div>
    <div class=" box-body">
        <table id="example1" class=" table table-bordered table-striped">
            <thead>
                <tr>
                    <th> Sno</th>
                    <th> Document</th>
                    <th> Is Active</th>
                    <th> For Staff</th>
                    <th> For Student</th>
                    <th> Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.Count(); i++)
                    {
                <tr>
                    <td>@Html.DisplayFor(r => count)</td>
                    <td>
                        @Html.DisplayFor(r => Model[i].DocName)
                    </td>
                    <td>@Html.DisplayFor(r => Model[i].Active)</td>
                    <td>@Html.DisplayFor(r => Model[i].DocForStaff)</td>
                    <td>@Html.DisplayFor(r => Model[i].DocForStudent)</td>
                    <td class="text-center">
                        @if (Model[i].IsDeletable)
                        {
                            <a href="#" onclick="DeleteDocumentConfirm('@Model[i].DocNo')" title="Delete Section" class="fa fa-trash btnDefaultColor"></a>
                        }
                        else
                        {
                            <a href="#" title="Delete Document" class="fa fa-trash btnDefaultColorFaded"></a>
                        }

                        @Html.EncodedActionLink(" ", "Updation", "Academic_DocumentMaster", new { docno = Model[i].DocNo }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Document" })
                    </td>
                </tr>

                        count++;
                    }
                }

            </tbody>

        </table>
    </div>
</div>
<script>
    function DeleteDocumentConfirm(docNo) {
        AsyncConfirmYesNo("Confirmation", "Are you sure to delete this document?", MyYesFunction, MyNoFunction, docNo);
    }

    function MyYesFunction(docNo) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Academic_DocumentMaster/Academic_DocumentMaster_Delete",
            data: { docNo: docNo },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg, result.Color);
                setTimeout(function () { window.location = "../Academic_DocumentMaster/New"; }, $('#hddnReloadTime').val());
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function MyNoFunction() {
        //alert('No Calling');
    }
</script>
