@model ISas.Entities.SMSManagement.SMS_ReportDetailFilterModel
@{
string reportName = "SMS Detail Report";
}

<div style="display:none;">
    @{ Html.RenderAction("_ReportHeader", "Common", new { tempReportName = @reportName });}
</div>
<form id="Mahesh">
    <table id="example1" class="table table-responsive table-bordered table-condensed nowrap" style="width:100%">
        @Html.HiddenFor(r => Model.GID)
        <thead>
            <tr>

                <th>@Html.CheckBox("chkBoxSelectAllStudent", false, htmlAttributes: new { onchange = "chekBoxAllStudent()" })</th>
                <th>Student/Staff</th>
                <th>Class/Dept.</th>
                <th>Mobile</th>
                <th>Status</th>
                <th>Send Time</th>
                <th>Deliver Time</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.referenceList.Count > 0)
            {
                int count = 1;
                for (int i = 0; i < Model.referenceList.Count; i++)
                {
            <tr>
                <td>@Html.CheckBoxFor(r => Model.referenceList[i].IsSelected, htmlAttributes: new { @class = "studentSelectchkBox"})</td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].Student)</td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].Class)</td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].MobileNo)@Html.HiddenFor(r => Model.referenceList[i].MobileNo) </td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].Status) @Html.HiddenFor(r => Model.referenceList[i].ERPNo)</td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].SendTime)@Html.HiddenFor(r => Model.referenceList[i].GID)</td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].DeliverTime)</td>
                <td>@Html.DisplayFor(r => Model.referenceList[i].status_desc)</td>
            </tr>
                    count++;
                }
            }
        </tbody>
    </table>
</form>
<script>
    $("#example1 tr").click(function (evt) {
        if (evt.ctrlKey) {
            $(this).toggleClass("selected");
        } else {
            var selected = $(this).hasClass("selected");
            $("#example1 tr").removeClass("selected");
            if (!selected)
                $(this).addClass("selected");
        }
    });



    function chekBoxAllStudent() {
        if ($('#chkBoxSelectAllStudent').is(':checked')) {
            $('.studentSelectchkBox').prop('checked', true);
        } else {
            $('.studentSelectchkBox').prop('checked', false);
        }
        getSelectedCount();
    }

