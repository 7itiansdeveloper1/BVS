@model List<ISas.Entities.SMSManagement.SMS_ReportDetailModel>

<table style="border:1px solid #808080;width:100%;" cellpadding="0" cellspacing="0">
    <thead>
        <tr style="border:1px solid #808080">
            <th style="border:1px solid #808080">S. No</th>
            <th style="border:1px solid #808080">Student</th>
            <th style="border:1px solid #808080">Class</th>
            <th style="border:1px solid #808080">Mobile</th>
            <th style="border:1px solid #808080">Status</th>
            <th style="border:1px solid #808080">Send Time</th>
            <th style="border:1px solid #808080">Deliver Time</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int count = 1;
            for (int i = 0; i < Model.Count; i++)
            {
                <tr style="border:1px solid #808080">
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => count)</td>
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => Model[i].Student)</td>
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => Model[i].Class)</td>
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => Model[i].MobileNo)</td>
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => Model[i].Status)</td>
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => Model[i].DisplaySendTime)</td>
                    <td style="border:1px solid #808080;text-align:center;">@Html.DisplayFor(r => Model[i].DisplayDeliverTime)</td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>