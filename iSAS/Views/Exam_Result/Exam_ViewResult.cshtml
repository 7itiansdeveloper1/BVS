@model ISas.Entities.ResultViewModel 

@{
    ViewBag.Title = "Exam_ViewResult";
}

<section class="content-header">
    <h1>
        View Result
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label for="">Session</label>
                        <div class="select">
                            @Html.HiddenFor(r => Model.SelectedSessionId)
                            @Html.DropDownListFor(m => m.SelectedSessionId, Model.SessionList, new { @class = "form-control select2", style = "width:100%;", id = "SelectedSessionId", disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label for="">Term</label>
                        <div class="select">
                            @Html.DropDownListFor(m => m.SelectedExamId, Model.ExamList, "-- Select Exam --", new { @class = "form-control select2", style = "width:100%;", id = "ddlExamList", dataChangeUrl = Url.Action("BindClassddl") })
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-2">
                    <div class="form-group">
                        <br />
                        <div class="select">
                            <h5>
                                <button title="SEARCH" type="button" class="btn btn-success" onclick="getStudentGradeCard()">
                                    <i class="fa fa-search btnDefaultColor"></i>
                                </button>
                            </h5>
                        </div>
                    </div>
                </div>

            </div>
            <hr />

            <div class="row">
                <div class="col-md-12" style="width:100%;overflow-y:auto;">
                    <div id="studentReportMainDiv"></div>
                </div>
            </div>

        </div>
    </div>
    

</section>

<script>
    function getStudentGradeCard() {
       
        var selectedexamid = $('#ddlExamList').val();  //$("#hddnClassSectionId").val()
        if (selectedexamid == null || selectedexamid == "") {
                OpenMessegeModal('No exam selected..!', 'Warning');
                return false;
                }

        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Exam_Result/_ReportCardView",
            data: {
                SessionId: $('#SelectedSessionId').val(),ExamId: $('#ddlExamList').val()
            },
            error: function (xhr, status, error) {
                OpenMessegeModal($('#ErrorMsgOnJasonFailed').val());
            },
            success: function (result) {
                    $('#studentReportMainDiv').html(result);
                
            },
            complete: function () {
                spinnerHide();
            }
        });
    }


</script>