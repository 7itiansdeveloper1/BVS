@model  List<ISas.Entities.Academic.Academic_DynamicReportWizardModels>
@using ISas.Web.Models;
@{
    ViewBag.Title = "LandingPage";
}

<section class="content-header">
    <h1>Dynamic Report Wizard</h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>School</li>
        <li class="active">Dynamic Report Wizard</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <!-- /.box-header -->
        <div class="box-header with-border">
            <h5 class="box-title">Report Wizard List</h5>
            <h5 class="box-title pull-right">
                @Html.ActionLink("ADD NEW", "New", "Academic_DynamicReportWizard", htmlAttributes: new { @class = "btn btn-primary btn-sm" })
            </h5>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S. No</th>
                        <th>Report Name</th>
                        <th>Display Name</th>
                        <th>Module</th>
                        <th>Report Type</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        int count = 1;
                        for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(r => count)</td>
                                <td>@Html.DisplayFor(r => Model[i].ReportName)</td>
                                <td>@Html.DisplayFor(r => Model[i].ReportDisplayName)</td>
                                <td>@Html.DisplayFor(r => Model[i].ModuleName)</td>
                                <td>@Html.DisplayFor(r => Model[i].ReportType)</td>
                                <td>@Html.DisplayFor(r => Model[i].ReportStatus)</td>
                                <td class="text-center">
                                    @Html.EncodedActionLink(" ", "Updation", "Academic_DynamicReportWizard", new { ReportId = Model[i].ReportId, ModuleId = Model[i].ModuleId }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Report Wizard" })
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</section>


