@using ISas.Web.Models;
@model List<ISas.Entities.SMSManagement.SMSTempleteModel>
@{
    int count = 1;
}

<section class="content-header">
    <h1>SMS Template Setup</h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>SMS</li>
        <li class="active">SMS Template Setup</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <span class="pull-right box-title">
                @Html.ActionLink("NEW MESSEGE", "NewTempleteSMS", "SMSTemplete", new { }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
            </span>
        </div>

        <div class="box-body">
            <table class="table table-responsive table-bordered table-condensed table-hover" id="tablename">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Template Name</th>
                        <th>Message Content</th>
                        <th>Length</th>
                        <th>Is Active</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.HiddenFor(r => Model[i].TemplateID, htmlAttributes: new { id = "TemplateID_" + @i + "" })
                                    @Html.HiddenFor(r => Model[i].SmsText, htmlAttributes: new { id = "SmsText_" + @i + "" })
                                    @Html.HiddenFor(r => Model[i].SMSID, htmlAttributes: new { id = "SMSID_" + @i + "" })
                                    @Html.DisplayFor(r => count)
                                </td>
                                <td>@Html.DisplayFor(r => Model[i].TemplateName)</td>
                                <td style="width:60%;word-break:break-word;">@Html.DisplayFor(r => Model[i].SmsText)</td>
                                <td>@Html.DisplayFor(r => Model[i].SmsText.Length)</td>
                                <td class="text-center">
                                    @if (Model[i].Active)
                                    {
                                        <label class="switch">
                                            <input id="Active_@i" type="checkbox" checked="checked" onchange="ConfirmToUpdateStatus(@i)">
                                            <span class="slider round"></span>
                                        </label>
                                    }
                                    else
                                    {
                                        <label class="switch">
                                            <input id="Active_@i" type="checkbox" onchange="ConfirmToUpdateStatus(@i)">
                                            <span class="slider round"></span>
                                        </label>
                                    }
                                </td>
                                <td class="text-center">@Html.EncodedActionLink(" ", "UpdateTempleteSMS", "SMSTemplete", new { SMSID = Model[i].SMSID }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit" })</td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#tablename').DataTable({
            "pageLength": 50
        });
    });

    function ConfirmToUpdateStatus(i) {
        var activeStatus = false;
        if ($('#Active_' + i).is(':checked')) {
            activeStatus = true;
        }
        $.ajax({
            type: "POST",
            url: "../SMSTemplete/TempleteSMS_CRUD",
            data: { Active: activeStatus, SMSID: $('#SMSID_' + i).val(), Function: "UpdateStatus", TemplateID: $('#TemplateID_' + i).val(), SmsText: $('#SmsText_' + i).val() },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg, result.Color);
            },
        });
    }
</script>