@using ISas.Web.Models;
@model List<ISas.Entities.Academic.Academic_SyllabusMasterModels>

<section class="content-header">
    <h1>Syllabus Master</h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>School</li>
        <li class="active">Syllabus Master</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h5 class="box-title">Syllabus Master List</h5>
            <div class="pull-right">
                @Html.ActionLink("ADD NEW", "New", "Academic_SyllabusMaster", new { }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
        <div class="box-body" style="overflow-y:scroll;">
            <table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Uploaded By</th>
                        <th>Uploaded Date</th>
                        <th>Is Active</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 1;
                        for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(r => count)</td>
                                <td>@Html.DisplayFor(r => Model[i].Title)</td>
                                <td>@Html.DisplayFor(r => Model[i].UploadedBy)</td>
                                <td>@Html.DisplayFor(r => Model[i].UploadDate)</td>
                                <td>@Html.DisplayFor(r => Model[i].IsActive)</td>
                                <td class="text-center">
                                    @Html.EncodedActionLink(" ", "Update", "Academic_SyllabusMaster", new { SyllabusId = Model[i].SyllabusId }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Syllabus Details" })

                                    @if (!string.IsNullOrEmpty(Model[i].textEditorPDFFilePath))
                                    {
                                        <a title="Click here to download generated pdf" class="text-sm btnDefaultColor" href="~/@Model[i].textEditorPDFFilePath" download="@Model[i].textEditorPDFFilePath"><i class="fa fa-file-pdf-o"></i></a>
                                    }
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
        var msg = '@ViewBag.Msg';
    var color = '@ViewBag.Color';
    if (msg != null && msg != '') {
        OpenMessegeAutoHideDiv(msg, color);
    }

    $(function () {
        $('#example1').DataTable({
            "pageLength": 50,
        });
    });
</script>