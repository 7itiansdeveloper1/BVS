                            <label>@Html.RadioButtonFor(r => Model.ReportFilterBy, "DEPT", htmlAttributes: new { }) Department Wise </label>
                        </div>
                        <div class="select">
                            @Html.DropDownListFor(m => m.DepartmentId, new SelectList(Model.DepartmentList, "Value", "Text"), htmlAttributes: new { @class = "form-control multiselectdropdown", multiple = true, style = "width:100%;" })
                            @Html.ValidationMessageFor(r => Model.DepartmentId, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3">
