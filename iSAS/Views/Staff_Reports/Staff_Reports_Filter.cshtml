    function getStaffDetailReport() {
        var staffIDs = ""; //$('#SelectedStaffIds').val();
        var reportFilterBy = $("input[name='ReportFilterBy']:checked").val();

        if (reportFilterBy == "STAFF") {
            staffIDs = $('#SelectedStaffIds').val();
            if (staffIDs == null || staffIDs == "") {
                OpenMessegeAutoHideDiv('No staff selected..!', 'Info');
            }
        } else {
            staffIDs = $('#DepartmentId').val();
            if (staffIDs == null || staffIDs == "") {
                OpenMessegeAutoHideDiv('No Department selected..!', 'Info');
            }
        }
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Staff_Reports/_Staff_Reports",
            data: {
                StaffIds: staffIDs.toString(), Reporttype: $("input[name='ReportType']:checked").val(), InActive: $('#Status').val(),
                OrderBy: "Name", ReportName: $('#ReportName').val(),
                SelectedReportName: $('#ReportName option:selected').text(),
                ReportFilterBy: reportFilterBy
            },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                $('#staffReportMainDiv').html(result);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>