@model List<ISas.Entities.Student_TC>
@{
    string msg = Model.Count + " records found";
}

<div class="row">
    <div class="col-md-12">
        <h4>  @Html.DisplayFor(r => msg) </h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>TC No</th>
                    <th>Adm No</th>
                    <th>Applied Date</th>
                    <th>Issue Date</th>
                    <th>Student Name</th>
                    <th>Class</th>
                    <th class="text-center">Download</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {

                    <tr>
                        <td>@Html.DisplayFor(r => Model[i].TCNo)</td>
                        <td>@Html.DisplayFor(r => Model[i].AdmNo)</td>
                        <td>@Html.DisplayFor(r => Model[i].AppliedDate)</td>
                        <td>@Html.DisplayFor(r => Model[i].IssueDate)</td>
                        <td>@Html.DisplayFor(r => Model[i].Student)</td>
                        <td>     @Html.DisplayFor(r => Model[i].ClassName)</td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(Model[i].filePath) && !string.IsNullOrEmpty(Model[i].fileKey))
                            {
                                <a class="glyphicon glyphicon-download-alt btnDefaultColor text-sm" title="@Model[i].fileName" href="@Model[i].filePath" download="@Model[i].fileName"></a>
                            }
                            else
                            {
                                <a href="#" class="glyphicon glyphicon-download-alt btnDefaultColorFaded" title="TC not uploaded"></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>