    function getStudentWiseMarksList() {
        $.ajax({
            url: '../Exam_MarksVerification/_studentWiseMarksDetails',
            beforeSend: function () {
                spinnerShow();
            },
            data: {
                ClassId: $('#ClassId').val(), SectionId: $('#SectionId').val(), ExamId: $('#ExamId').val(),
                Category: $('#Category').val(), Mode: 'GetExamSummary',
            },
            type: 'get',
            success: (function (data) {
                $('#divMarkList').empty();
                $('#divMarkList').html(data);
            }),
            complete: function () {
                spinnerHide();
            }
        })
