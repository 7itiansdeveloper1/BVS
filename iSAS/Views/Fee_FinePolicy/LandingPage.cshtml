@using ISas.Web.Models;
@model List<ISas.Entities.FeesEntities.Fee_FinePolicyModels>
@{
    string structId = ""; string structName = "";
    if (Model != null && Model.Count > 0)
    {
        structId = Model[0].StructId;
        structName = Model[0].StructName;
    }
}

<!-- /.box -->
<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Fine Policy List</h5>
        </div>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fix Amount</th>
                    <th>Amount</th>
                    <th>Frequency</th>
                    <th>Day</th>
                    <th>Month</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Html.DisplayFor(r => count)</td>
                            <td>@Html.DisplayFor(r => Model[i].FixAmount)</td>
                            <td>@Html.DisplayFor(r => Model[i].Amount)</td>
                            <td>@Html.DisplayFor(r => Model[i].Frequency)</td>
                            <td>@Html.DisplayFor(r => Model[i].TillDay)</td>
                            <td>@Html.DisplayFor(r => Model[i].TillMonth)</td>
                            <td class="text-center">
                                @if (Model[i].IsDeletetable)
                                {
                                    <a href="#" onclick="DeletePolicyConfirm('@Model[i].PolicyId')" title="Delete Policy" class="fa fa-trash btnDefaultColor"></a>
                                }
                                else
                                {
                                    <a href="#" title="Delete Policy" class="fa fa-trash btnDefaultColorFaded"></a>
                                }

                                @if (Model[i].IsEditable)
                                {
                                    @Html.EncodedActionLink(" ", "Updation", "Fee_FinePolicy", new { StructId = Model[i].StructId, StructName = Model[i].StructName, PolicyId = Model[i].PolicyId }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Policy" })
                                }
                                else
                                {
                                    @Html.EncodedActionLink(" ", "Updation", "Fee_FinePolicy", new { }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColorFaded", disabled = true, title = "Edit Policy" })
                                }
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<script>
    $(function () {
        $('#example1').DataTable()
    });

    function DeletePolicyConfirm(PolicyId) {
        AsyncConfirmYesNo("Confirmation", "Are you sure to delete this fine?", MyYesFunction, MyNoFunction, PolicyId);
    }

    function MyYesFunction(PolicyId) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Fee_FinePolicy/Fee_FinePolicy_Delete",
            data: { PolicyId: PolicyId },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg, result.Color );
                setTimeout(function () { window.location = "../Fee_FinePolicy/New?StructId=@structId&StructName=@structName"; }, 3000);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function MyNoFunction() {
        //alert('No Calling');
    }
</script>