@model List<ISas.Entities.DashboardEntities.CertificateModels>


<section class="content-header">
    <h1> Certificates </h1>
</section>
<section class="content">
    <div class="box box-success">
        <div class=" box-header">
        </div>
        <diiv class="box-body">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th> Sno.</th>
                            <th>Certificate Name</th>
                            <th class="text-center">Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            int count = 1;
                            <tr>
                                <td>
                                    @Html.HiddenFor(r => Model[i].CertificateId)
                                    @Html.HiddenFor(r => Model[i].Student)
                                    @Html.HiddenFor(r => Model[i].CertificateDate)
                                    @Html.HiddenFor(r => Model[i].ReportName)
                                    @Html.DisplayFor(r => count)
                                </td>
                                <td>@Html.DisplayFor(r => Model[i].CertificateName)</td>
                                <td class="text-center">
                                    @Html.ActionLink(" ", "GetCertifricateReport", "Certificates", new { studentName = Model[i].Student, certificateDate = Model[i].CertificateDate, reportName = Model[i].ReportName }, htmlAttributes: new { @class = "fa fa-download btnDefaultColor", title = "Download" })
                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>

                    
                </table>
            </div>

        </diiv>
    </div>
</section>