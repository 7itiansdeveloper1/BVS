@model ISas.Entities.Exam_Entities.StudentAssessmentResult
<section class="content-header">
    <h1>Answersheet</h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li class="active">Answersheet</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h5 class="box-title">Subject :- <strong class="text-primary">@Html.DisplayFor(r => Model.SubjectDisplayName)</strong></h5>
            <h5 class="box-title">Assessment :- <strong class="text-primary">@Html.DisplayFor(r => Model.AssessmentName)</strong></h5>
            <h5 class="box-title">Max Mark :- <strong class="text-primary">@Html.DisplayFor(r => Model.maxMark)</strong></h5>
            <h5 class="box-title pull-right">Result :- <strong class="text-primary">@Html.DisplayFor(r => Model.result)</strong></h5>
            <h5 class="box-title pull-right">Mark Obtained :- <strong class="text-primary">@Html.DisplayFor(r => Model.markObtained)</strong></h5>
        </div>


    </div>
    <div class="box-body">

        <div class=" box-body pad table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null && Model.answersheetList.Count > 0)
                    {

                        int count = 1;
                        for (int i = 0; i < Model.answersheetList.Count(); i++)
                        {

                            <tr>
                                <td>
                                    @if (Model.answersheetList[i].isHavingParagraph)
                                    {
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-3 col-md-12">
                                                <label for="">@Html.DisplayTextFor(r => Model.answersheetList[i].parValue)</label>
                                            </div>
                                        </div>
                                    }

                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 col-md-12">
                                            <div class="form-group">
                                                <label for="">
                                                    @Html.LabelFor(r => Model.answersheetList[i].qNo) @Model.answersheetList[i].qNo:@Model.answersheetList[i].qText
                                                </label>
                                                @*<label class="right">(MM: @Model.answersheetList[i].qMark)</label>*@
                                            </div>
                                        </div>

                                    </div>




                                    @if (Model.answersheetList[i].qNature == "DI")
                                    {
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12">
                                                <div class="form-group">
                                                    <label for="">@Html.LabelFor(r => Model.answersheetList[i].ansText)</label>
                                                    <div class="select">
                                                        @Html.TextAreaFor(m => m.answersheetList[i].ansText, htmlAttributes: new { @class = "form-control", @rows = 18, maxlength = 2000 })
                                                        @Html.ValidationMessageFor(r => Model.answersheetList[i].ansText, null, htmlAttributes: new { style = "color:red;" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    else
                                    {
                                        <div>

                                            <div class="row">

                                                @if (Model.answersheetList[i].Oa != null && Model.answersheetList[i].Oa.Length > 0)
                                                {
                                                    <div class="col-xs-12 col-sm-12 col-md-3">
                                                        <div class="form-group">
                                                            <span> a . @Model.answersheetList[i].Oa</span>
                                                        </div>
                                                    </div>
                                                }
                                                @if (Model.answersheetList[i].Ob != null && Model.answersheetList[i].Ob.Length > 0)
                                                {
                                                    <div class="col-xs-12 col-sm-12 col-md-3">
                                                        <div class="form-group">
                                                            <span> b . @Model.answersheetList[i].Ob</span>

                                                        </div>
                                                    </div>
                                                }
                                            </div>




                                            <div class="row">
                                                @if (Model.answersheetList[i].Oc != null && Model.answersheetList[i].Oc.Length > 0)
                                                {
                                                    <div class="col-xs-12 col-sm-12 col-md-3">
                                                        <div class="form-group">
                                                            <span> c . @Model.answersheetList[i].Oc</span>
                                                        </div>
                                                    </div>
                                                }
                                                @if (Model.answersheetList[i].Od != null && Model.answersheetList[i].Od.Length > 0)
                                                {
                                                    <div class="col-xs-12 col-sm-12 col-md-3">
                                                        <div class="form-group">
                                                            <span> d . @Model.answersheetList[i].Od</span>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-6 col-md-12">
                                                <div class="form-group">
                                                    <label for="">
                                                        @Html.LabelFor(r => Model.answersheetList[i].ans) : @Model.answersheetList[i].ans
                                                    </label>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-6 col-md-6">
                                                <div class="">
                                                    <label for="">
                                                        @Html.LabelFor(r => Model.answersheetList[i].correctAnswer) : @Model.answersheetList[i].correctAnswer
                                                    </label>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row col-xs-12 col-sm-6 col-md-6">
                                                <div class="col-xs-12 col-sm-6 col-md-6">
                                                    <label for="">
                                                        @if (Model.answersheetList[i].ansResult == "W")
                                                        {
                                                            <a class="btn btn-danger fa fa-remove"></a>

                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-primary fa fa-check"></a>
                                                        }

                                                    </label>
                                                </div>
                                                <div class="col-xs-12 col-sm-6 col-md-6">
                                                    <label for="">
                                                        <label for="">
                                                            @Html.LabelFor(r => Model.answersheetList[i].markScored1) : @Model.answersheetList[i].markScored1
                                                        </label>

                                                    </label>
                                                </div>

                                        </div>

                                    }
                                </td>
                            </tr>
                            count++;
                        }


                    }


                </tbody>


            </table>
        </div>

    </div>
    <div class="box-footer">

    </div>

</section>