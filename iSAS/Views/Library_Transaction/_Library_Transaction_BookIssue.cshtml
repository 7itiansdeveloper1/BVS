@model ISas.Entities.LibraryEntities.Library_TransactionModels

<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="input-group">
            <span class="input-group-addon">@Html.LabelFor(r => Model.BookIssueDetails.AccNo)</span>
            @Html.TextBoxFor(m => m.BookIssueDetails.AccNo, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(r => Model.BookIssueDetails.AccNo, null, htmlAttributes: new { style = "color:red;" })
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-5">
        <div class="input-group">
            <span class="input-group-addon">@Html.LabelFor(r => Model.BookIssueDetails.IssueDays)</span>
            @Html.TextBoxFor(m => m.BookIssueDetails.IssueDays, htmlAttributes: new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(r => Model.BookIssueDetails.IssueDays, null, htmlAttributes: new { style = "color:red;" })
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-1">
        <button type="button" class="btn btn-success pull-right" onclick="AddBookToIssueList()">
            <i class="fa fa-plus btnDefaultColor"></i>
        </button>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group">
            @Html.TextBoxFor(m => m.BookIssueDetails.BookName, htmlAttributes: new { @class = "form-control", @readonly = true, placeholder = "Title" })
            @Html.ValidationMessageFor(r => Model.BookIssueDetails.BookName, null, htmlAttributes: new { style = "color:red;" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group">
            @Html.TextBoxFor(m => m.BookIssueDetails.AuthorName, htmlAttributes: new { @class = "form-control", @readonly = true, placeholder = "Author" })
            @Html.ValidationMessageFor(r => Model.BookIssueDetails.AuthorName, null, htmlAttributes: new { style = "color:red;" })
        </div>
    </div>
</div>