@model ISas.Entities.Academic.Academic_ERPBillModel

<body onload="window.print();">
    <div class="content">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Invoice
                <small>@Model.invoice.invoiceNo</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> School</a></li>
                <li class="active">ERP Invoice</li>
            </ol>
        </section>
        @*<div class="pad margin no-print">
                <div class="callout callout-info" style="margin-bottom: 0!important;">
                    <h4><i class="fa fa-info"></i> Note:</h4>
                    This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
                </div>
            </div>*@
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> @Model.sellerparty.FromParty
                        <small class="pull-right">Date: @Model.invoice.invoiceDate</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>@Model.sellerparty.FromParty</strong><br>
                        @Model.sellerparty.address1<br>
                        @Model.sellerparty.address2<br>
                        Phone: @Model.sellerparty.Phone<br>
                        Email: @Model.sellerparty.EMail
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong> @Model.billparty.BillParty</strong><br>
                        @Model.billparty.address1<br>
                        State: @Model.billparty.State;<br>
                        Phone: @Model.billparty.Phone<br>
                        Email: @Model.billparty.EMail
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Invoice No   : </b>  @Model.invoice.invoiceNo<br>
                    <b>Invoice date : </b>  @Model.invoice.invoiceDate<br>
                    <b>Invoice Period :</b> @Model.invoice.invoiceFromDate to @Model.invoice.invoiceToDate<br>
                    <b>State :</b> @Model.invoice.invoiceState<br>
                    <b>Code :</b>  @Model.invoice.invoiceCode<br>
                    <b>GSTIN :</b> @Model.invoice.invoiceGSTNo

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sno</th>
                                <th>Product</th>
                                <th>HSN</th>
                                <th>No of Unit</th>
                                <th>Rate/Unit</th>
                                <th>Amount</th>
                                <th>IGST(18%)</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.invoiceDetail.Count > 0)
                            {
                                int count = 1;
                                for (int i = 0; i < Model.invoiceDetail.Count(); i++)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@Model.invoiceDetail[i].product</td>
                                        <td>@Model.invoiceDetail[i].hsnCode</td>
                                        <td>@Model.invoiceDetail[i].Qty  </td>
                                        <td>@Model.invoiceDetail[i].RatePerUnit</td>
                                        <td>@Model.invoiceDetail[i].taxAbleAmount</td>
                                        <td>@Model.invoiceDetail[i].tax1Amount</td>
                                        <td>@Model.invoiceDetail[i].totalAmount</td>
                                    </tr>
                                }
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-7">
                    <p class="lead">Payment Details:</p>
                    <img src="../../dist/img/credit/visa.png" alt="Visa">
                    <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
                    @*<img src="../../dist/img/credit/american-express.png" alt="American Express">
                        <img src="../../dist/img/credit/paypal2.png" alt="Paypal">*@
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        Bank Details <br />
                        Bank A/C: @Model.sellerparty.Bankname<br />
                        Bank IFSC: @Model.sellerparty.bankIFSC<br />
                        Terms & conditions<br />
                        @Model.sellerparty.condition1<br />
                        @Model.sellerparty.condition2

                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-5">
                    <p class="lead">Amount Due @Model.invoice.invoiceDate</p>
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Total Amount Before Tax:</th>
                                <td class="pull-right">@Model.invoicesummary.amountBeforeTax</td>
                            </tr>
                            <tr>
                                <th>Tax (18%) :</th>
                                <td class="pull-right">@Model.invoicesummary.totalTax</td>
                            </tr>

                            <tr>
                                <th>Total Amount After Tax:</th>
                                <td class="pull-right">@Model.invoicesummary.amountAfterTax</td>
                            </tr>

                            <tr>
                                <th style="width:50%">Total Invoice amount in word</th>
                                <td class="pull-right">@Model.invoicesummary.amountinwWord</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- this row will not appear when printing -->
            <div class="row no-print">
                <div class="col-xs-12">
                    <a href="../Academic_ERPBill/InvoicePrint" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
                    <button type="button" class="btn btn-success pull-right disabled">
                        <i class="fa fa-credit-card"></i> Submit Payment
                    </button>
                    <button type="button" class="btn btn-primary pull-right disabled" style="margin-right: 5px;">
                        <i class="fa fa-download "></i> Generate PDF
                    </button>
                </div>
            </div>
        </section>
        <!-- /.content -->
        <div class="clearfix"></div>
    </div>
</body>

