@model ISas.Entities.UserEntities.StudentRoleModels
<div>
    <table id="example2" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.CheckBox("chkBoxSelectAllMenu", false, htmlAttributes: new { onchange = "Fun_CheckToSelectAllMenu()" }) <span>Select </span> </th>
                <th>Role Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.studentRoleAssignList.Count; i++)
            {
                <tr>
                    
                    <td>
                        @Html.CheckBoxFor(r => Model.studentRoleAssignList[i].isSelected ,new { @class = "menu" })
                    </td>

                    <td>
                        @Html.HiddenFor(r => Model.studentRoleAssignList[i].roleId)
                        @Html.DisplayFor(r => Model.studentRoleAssignList[i].displayRoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(r => Model.studentRoleAssignList[i].displayOrder)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<script>

    function Fun_CheckToSelectAllMenu() {
        if ($('#chkBoxSelectAllMenu').is(':checked')) {
            $('.menu').prop('checked', true);
        }
        else {
            $('.menu').prop('checked', false);
        }
    }
</script>