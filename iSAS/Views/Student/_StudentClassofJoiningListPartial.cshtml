<script>
    $(function () {
        $('.select2').select2()
    });
    $(function () {
        var selectedParamId = '@Model.SelectedParameterId';
        if (selectedParamId == "BUSStop") {
            spinnerShow();
            $('#tblStudUpdation > tbody  > tr').each(function (i) {
                if ($('#ClassofJoiningList_' + i + '__Parameter1').val() != null && $('#ClassofJoiningList_' + i + '__Parameter1').val() != '') {
                    getrouteByStopId(i);
                }
            });
            spinnerHide();
        }
    });

    function getrouteByStopId(rowNo) {
        var RouteId = 'ClassofJoiningList_' + rowNo + '__Parameter1';
        var StopId = 'ClassofJoiningList_' + rowNo + '__Parameter2';
        var stopHtml = '<option selected="true" value="">--Select--</option>';
        $.ajax({
            type: "GET",
            url: "../Common/GetRouteStopByRouteId",
            data: { RouteId: $('#' + RouteId).val() },
            success: function (result) {
                for (var i = 0; i < result.length; i++) {
                    stopHtml += '<option value=' + result[i].Value + '>' + result[i].Text + '</option>';
                }
                $('#' + StopId).html(stopHtml);
                if ($('#hddnparam2Val_' + rowNo).val() != null && $('#hddnparam2Val_' + rowNo).val() != '') {
                    $('#' + StopId).val($('#hddnparam2Val_' + rowNo).val()).change();
                }
            },
        });
    }
</script>