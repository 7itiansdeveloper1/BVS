@model ISas.Web.ViewModels.Student_UpdationViewModel

@Html.HiddenFor(r => Model.ColumnType)
@Html.HiddenFor(r => Model.SelectedParameterId)

<div style="display:none;">
    @{ Html.RenderAction("_ReportHeaderWithoutLogo", "Common", new { tempReportName = @Model.SelectedClassSectionName });}
</div>
<table id="tblStudentDetails" cellspacing="0" cellpadding="0" class="table table-bordered table-responsive" style="border:1px solid black; width:100%;text-align:center;display:none;">
    <thead>
        <tr style="border:1px solid black;">
            <th style="border:1px solid black;">Adm No.</th>
            <th style="border:1px solid black;">Roll No.</th>
            <th style="border:1px solid black;">Student Name</th>
            @if (Model.SelectedParameterId == "Student" || Model.SelectedParameterId == "Father" || Model.SelectedParameterId == "Mother")
            {
                <th style="border:1px solid black;">First Name</th>
                <th style="border:1px solid black;">Middle Name</th>
                <th style="border:1px solid black;">Last Name</th>
            }
            else if (Model.SelectedParameterId == "MOT")
            {
                <th style="border:1px solid black;">@Model.SelectedParameterId</th>
                <th style="border:1px solid black;">Picked up By</th>
            }
            else if (Model.SelectedParameterId == "BUSStop")
            {
                <th style="border:1px solid black;">@Model.SelectedParameterId</th>
                <th style="border:1px solid black;">Stop</th>
            }
            else
            {
                <th style="border:1px solid black;">@Model.SelectedParameterId</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ClassofJoiningList.Count; i++)
        {
        <tr style="border:1px solid black;">
            <td style="border:1px solid black;">
                @Html.HiddenFor(r => @Model.ClassofJoiningList[i].Student.StudentERPNo)
                @Model.ClassofJoiningList[i].Student.StudentAdmNo
            </td>
            <td style="border:1px solid black;">@Model.ClassofJoiningList[i].Student.StudentRollNo </td>
            <td style="border:1px solid black;">@Model.ClassofJoiningList[i].Student.StudentName </td>

            @if (Model.ColumnType == "1C")
            {
                if (Model.UserRole != "Admin" && Model.SelectedParameterId=="DOB")
                {
                    
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter1, new { @class = "disabled" })</td>
                }
                else
                {
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter1  , new { @class = "disabled" })</td>
                }


            }
            else if (Model.ColumnType == "3C")
            {
                if (Model.UserRole == "Admin")
                {
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter1 )</td>
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter2)</td>
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter3)</td>
                }
                else
                {
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter1)</td>
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter2)</td>
                    <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].Parameter3)</td>
                }

            }


            else if (Model.ColumnType == "DD")
            {
                <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].DD1TextVal)</td>
            }
            else if (Model.ColumnType == "2DD")
            {
                <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].DD1TextVal)</td>
                <td style="border:1px solid black;">@Html.DisplayFor(m => Model.ClassofJoiningList[i].DD2TextVal)</td>
            }
            else
            {
                @*<td>@Html.TextBoxFor(m => Model.ClassofJoiningList[i].Parameter1, new { @class = "form-control"})</td>*@
            }
        </tr>
        }
    </tbody>
</table>

