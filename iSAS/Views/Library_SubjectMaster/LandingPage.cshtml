@using ISas.Web.Models;
@model List<ISas.Entities.LibraryEntities.Library_SubjectMasterModels>
@{
    string reportName = "Report: Subject Wise ;Print Date:"  + DateTime.Now.ToShortDateString().Replace("-", "/");
}
<div style="display:none;">
    @{ Html.RenderAction("_ReportHeader", "Common", new { tempReportName = @reportName });}
</div>
<hr />

<!-- /.box -->
<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Subject List</h5>
        </div>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-responsive table-bordered table-condensed nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>S. No</th>
                    <th>Subject Name</th>
                    <th>Description</th>
                    <th>Active</th>
                    <th>Subject Strenght</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(r => count)
                            </td>
                            <td>@Html.DisplayFor(r => Model[i].SubjectName)</td>
                            <td>@Html.DisplayFor(r => Model[i].Description)</td>
                            <td>@Html.DisplayFor(r => Model[i].IsActive)</td>
                            <td>@Html.DisplayFor(r => Model[i].SubjectStrength)</td>

                            <td class="text-center">
                                @if (Model[i].IsDeleteable)
                                {
                                    <a href="#" onclick="DeleteSubjectConfirm('@Model[i].SubjectId')" title="Delete Subject" class="fa fa-trash btnDefaultColor"></a>
                                }
                                else
                                {
                                    <span disabled="disabled" title="Delete Subject" class="fa fa-trash btnDefaultColorFaded"></span>
                                }

                                @Html.EncodedActionLink(" ", "Updation", "Library_SubjectMaster", new { SubjectId = Model[i].SubjectId }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Subject" })

                                <a title="Book Title Wise Report" class="btnDefaultColor" href="#" onclick="Get_BookTitleWiseReport('@Model[i].SubjectId')"><i class="fa fa-folder"></i></a>
                            </td>
                        </tr>

                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>

<script>
    $("#example1 tr").click(function (evt) {
        if (evt.ctrlKey) {
            $(this).toggleClass("selected");
        } else {
            var selected = $(this).hasClass("selected");
            $("#example1 tr").removeClass("selected");
            if (!selected)
                $(this).addClass("selected");
        }
    });

    $(document).ready(function () {
        $('#example1').DataTable({
            "pageLength": 50,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'Copy',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (xlsx) {
                        console.log(xlsx);

                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'Print',
                    title: "",
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (win) {
                        $(win.document.body)
                            //.css('font-size', '10pt')
                            .prepend($('#reportHeaderDiv').html()); //'<img src="http://localhost:60254/Images/System/balVikasLog.jpg" style="" />'
                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                },
                'colvis'
            ],
            select: true
        });
    });
</script>

<script>
      function Get_BookTitleWiseReport(subjectId) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Library_SubjectMaster/_BookTitleWiseReport",
            data: { SubjectId: subjectId},
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenModalWithSave(result, 'Book Title Wise Report');
            },
            complete: function () {
                spinnerHide();
            }
        });
    }

    function DeleteSubjectConfirm(SubjectId) {
        AsyncConfirmYesNo("Confirmation", "Are you sure to delete this Subject?", MyYesFunction, MyNoFunction, SubjectId);
    }

    function MyYesFunction(SubjectId) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Library_SubjectMaster/Library_SubjectMaster_DELETE",
            data: { SubjectId: SubjectId },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg, result.Color);
                setTimeout(function () { window.location = "../Library_SubjectMaster/New"; }, $('#hddnReloadTime').val());
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function MyNoFunction() {
        //alert('No Calling');
    }
</script>