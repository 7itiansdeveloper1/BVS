@using ISas.Web.Models;
@model List<ISas.Entities.TransportEntities.Transport_VehicleSetupModel>

<section class="content-header">
    <h1>
        Vehicle Setup
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Transport</li>
        <li class="active">Vehicle Setup</li>
    </ol>
</section>
<section class="content">
    <!-- /.box -->
    <div class="box box-primary">
        <div class="box-header with-border">
          <h5 class="box-title">Vehicle List</h5>
            <h5 class="box-title pull-right">
                @Html.ActionLink("ADD NEW", "New", "Transport_VehicleSetup", new { }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
            </h5>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S. No</th>
                        <th>Vehicle Name</th>
                        <th>Vehicle Type</th>
                        <th>Vehicle No</th>
                        <th>Driver Name</th>
                        <th>Driver Mob.</th>
                        <th>Helper Name</th>
                        <th>Helper Mob.</th>
                        <th>Incharge Name</th>
                        <th>Incharge Mob.</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        int count = 1;
                        for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(r => count)</td>
                                <td>@Html.DisplayFor(r => Model[i].VehName)</td>
                                <td>@Html.DisplayFor(r => Model[i].VehType)</td>
                                <td>@Html.DisplayFor(r => Model[i].VehNo)</td>
                                <td>@Html.DisplayFor(r => Model[i].DName)</td>
                                <td>@Html.DisplayFor(r => Model[i].DMob)</td>
                                <td>@Html.DisplayFor(r => Model[i].HName)</td>
                                <td>@Html.DisplayFor(r => Model[i].HMob)</td>
                                <td>@Html.DisplayFor(r => Model[i].InchargeName)</td>
                                <td>@Html.DisplayFor(r => Model[i].InchargeMobile)</td>
                                <td class="text-center">
                                    @if (Model[i].IsDeleteable)
                                    {
                                        <a href="#" onclick="DeleteVehicleConfirm('@Model[i].VehID')" title="Delete Vehicle" class="fa fa-trash btnDefaultColor"></a>
                                    }
                                    else
                                    {
                                        <span style="cursor:not-allowed;" disabled="disabled" title="Delete Vehicle" class="fa fa-trash btnDefaultColorFaded"></span>
                                    }

                                    @Html.EncodedActionLink(" ", "Updation", "Transport_VehicleSetup", new { VehicleId = Model[i].VehID }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Vehicle" })
                                    <a href="#" onclick="VehicleRouteSetup('@Model[i].VehID', '@Model[i].VehName')" title="Vehicle Route Setup" class="fa fa-gear btnDefaultColor"></a>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<script>
    function Fun_checkToSelectAllClases() {
        if ($('#checkBoxselectAllClasses').is(':checked')) {
            $('.checkBoxclass').prop('checked', true);
        } else {
            $('.checkBoxclass').prop('checked', false);
        }
    }

    function VehicleRouteSetup(VehicleId, VehicleName) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Transport_VehicleSetup/_VehicleRouteSetup",
            data: { VehicleId: VehicleId },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenModalWithSave(result, 'Route Setup For :-' + VehicleName);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }


    $(function () {
        $('#example1').DataTable({
            "pageLength": 50
        });
    });

    function DeleteVehicleConfirm(VehicleId) {
        AsyncConfirmYesNo("Confirmation", "Are you sure to delete this Vehicle?", MyYesFunction, MyNoFunction, VehicleId);
    }

    function MyYesFunction(VehicleId) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Transport_VehicleSetup/Transport_VehicleSetup_Delete",
            data: { VehicleId: VehicleId },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg, result.Color );
                setTimeout(function () { window.location = "../Transport_VehicleSetup/LandingPage"; }, $('#hddnReloadTime').val());
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function MyNoFunction() {
        //alert('No Calling');
    }
</script>