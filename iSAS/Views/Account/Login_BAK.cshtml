@model ISas.Web.Models.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SAS-School Automation System | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=source+sans+pro:300,400,600,700,300italic,400italic,600italic">

    @*<link href="~/bower_components/font-awesome/css/googleapisFont.css" rel="stylesheet" />*@
    <!-- jQuery 3 -->
    <script src="../bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../plugins/iCheck/icheck.min.js"></script>
</head>
<body class="hold-transition login-page" style="background-image: url(../Images/System/BackgroundImage.jpeg);background-size:100%;background-repeat:no-repeat;height:100%;">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-8">&nbsp;</div>
        <div class="col-xs-12 col-sm-4 col-md-3" style="padding-top:8%;">
            <div class="box box-widget" style="background-color:transparent;">
                @*<div class="login-logo">
                        <img src="../Images/System/balVikasLog.jpg" style="width:100%;height:100%;" />
                    </div>*@
                <!-- /.login-logo -->
                <div class="box-body">
                    <p class="login-box-msg" style="color:white;"> <strong> Sign in</strong></p>

                    @using (Html.BeginForm())
                    {
                        <div class="form-group has-feedback">
                            @if (Model != null && Model.SessionList != null)
                            {
                                @Html.DropDownListFor(m => m.SelectedSessionId, Model.SessionList, new { @class = "form-control", id = "ddlSessionList" })
                            }
                        </div>

                        <div class="form-group has-feedback">
                            @Html.TextBoxFor(m => m.username, new { @class = "form-control", autocomplete = "off", placeholder = "User Name" })
                            @*<input type="email" class="form-control" placeholder="Email">*@
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            @Html.PasswordFor(m => m.password, new { @class = "form-control", autocomplete = "off", placeholder = "Password" })
                            @*<input type="password" class="form-control" placeholder="Password">*@
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label>
                                        <input type="checkbox"> Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }
                    <!-- /.social-auth-links -->
                    <a href="#"><strong>I forgot my password</strong></a><br>

                    <div class="text-center">
                        <span class="text-danger" style="font-size:12px;font-weight:800;">A Product of <a href="http://www.7itians.com" target="_blank">7itians</a></span>
                    </div>
                </div>

                <!-- /.login-box-body -->
            </div>
        </div>
        <div class="col-xs-12 col-sm-2 col-md-1">&nbsp;</div>
    </div>
    <!-- /.login-box -->
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>

