@model ISas.Entities.Student_Entities.Student_IdentityCardModel

@using (Html.BeginForm("Student_IdentityCard", "Student_IdentityCard", new { rptname = @Model.rptname }, FormMethod.Post, htmlAttributes: new { target = "_blank" }))
{
    @Html.HiddenFor(r => Model.GenAdmitCard)
    <div class="box box-primary">
        <div class="box-header with-border">
            <h5 class="box-title">Student Details</h5>
            <h5 class="box-title pull-right"><input type="submit" value="Print Selected" class="btn btn-primary pull-right" /></h5>
            @*<h5 class="box-title pull-right" style="padding-right:5px;">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(r=> Model.GenAdmitCard) Print Admit Card?
                        </label>
                    </div>
                </h5>*@
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12" style="overflow:scroll;">
                    <table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%;">
                        <thead>
                            <tr>
                                <th>@Html.CheckBox("chkBoxSelectAll", false, htmlAttributes: new { onchange = "fun_CheckToSelectAll()" })</th>
                                <th>#</th>
                                <th>DOA</th>
                                <th>Adm No</th>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Gender</th>
                                <th>DOB</th>
                                <th>Father</th>
                                <th>Mother</th>
                                <th>Father Mobile</th>
                                <th>Mother Mobile</th>
                                <th>Route</th>
                                <th>Stop</th>
                                <th>Address</th>
                                <th>Blood Group</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.StudentDetails.Count; i++)
                            {
                                <tr>
                                    <th>@Html.CheckBoxFor(r => Model.StudentDetails[i].Selected, htmlAttributes: new { @class = "clsSelect" })</th>
                                    <th>
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Class)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Session)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].BG)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Student)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Gender)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].DOA)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Mother)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].DOB)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Father)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].FMobile)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].MMobile)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].AdmNo)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].ERPNo)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Route)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Stop)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].S)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].M)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].F)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].Address)
                                        @Html.HiddenFor(r => Model.StudentDetails[i].RollNo)

                                        @Html.DisplayFor(r => Model.StudentDetails[i].sno)
                                    </th>
                                    
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].DOA)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].AdmNo)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Student)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Class)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Gender)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].DOB)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Father)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Mother)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].FMobile)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].MMobile)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Route)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Stop)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].Address)</th>
                                    <th>@Html.DisplayFor(r => Model.StudentDetails[i].BG)</th>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $('#example1').DataTable({
        "pageLength": 50
    });

    function fun_CheckToSelectAll() {
        if ($('#chkBoxSelectAll').is(':checked')) {
            $('.clsSelect').prop('checked', true);
        } else {
            $('.clsSelect').prop('checked', false);
        }
    }
</script>