@model List<ISas.Entities.FeesEntities.FeeStructureDetails>
@{
    int feeStrectureCount = 0;
    int total = 0;
    if (Model != null && Model.Count > 0)
    {
        total = Model.Sum(r => r.Due);
    }
}
<table class="table table-hover table-responsive table-condensed table-bordered ">
    <thead>
        <tr>
            <th>Installment</th>
            <th>Due Date</th>
            <th>Head Name</th>
            <th>Due Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            feeStrectureCount = Model.Count;
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(r => Model[i].Installment)</td>
                    <td>@Html.DisplayFor(r => Model[i].DueDate)</td>
                    <td>@Html.DisplayFor(r => Model[i].Head)</td>
                    <td>@Html.DisplayFor(r => Model[i].Due)</td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(function () {
        $('#FeeStrectureCount').val('@feeStrectureCount');
        $('#lblFeeStructTotal').html('@total');
    });
</script>


