@model ISas.Entities.FeesEntities.Fee_MiscDueModel
@{
    int count = 1;
}

<div class="box box-primary">
    <div class="box-body">


        <table class="table table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Due Date</th>
                    <th>Due Amount</th>
                    <th>Paid</th>
                    @*<th>Invoice #</th>*@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.StudentDuesList.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(r => count)
                            @Html.HiddenFor(r => Model.StudentDuesList[i].ERPNo)
                            @Html.HiddenFor(r => Model.StudentDuesList[i].TransRefNo)
                            @Html.HiddenFor(r => Model.StudentDuesList[i].DueDate)
                        </td>
                        <td>@Html.DisplayFor(r => Model.StudentDuesList[i].DueDate)</td>

                        <td>
                            @if (Model.StudentDuesList[i].Editable && Model.StudentDuesList[i].IsChargesAvailed=="NA")
                            {
                                @Html.TextBoxFor(r => Model.StudentDuesList[i].Amount, htmlAttributes: new { @class = "form-control clsDueAmount" })
                            }
                            else
                            {
                                @Html.TextBoxFor(r => Model.StudentDuesList[i].Amount, htmlAttributes: new { @class = "form-control", readOnly = true })
                            }
                        </td>
                        <td>@Html.DisplayFor(r => Model.StudentDuesList[i].Paid)</td>
                        @*<td>@Html.DisplayFor(r => Model.StudentDuesList[i].TransRefNo)</td>*@
                        <td>
                            @if (Model.StudentDuesList[i].Cancelable)
                            {
                                <a href="#" onclick="removeDueConfirmation('@i')" title="Remove Dues" class="fa fa-remove btnDefaultColor"></a>
                            }
                            else
                            {
                                <a href="#" title="Remove Due" class="fa fa-remove btnDefaultColorFaded"></a>
                            }
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>

</div>
</div>