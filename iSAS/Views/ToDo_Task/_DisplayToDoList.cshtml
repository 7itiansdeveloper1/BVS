@model List<ISas.Entities.DashboardEntities.ToDo_TaskEntitiesModel>

<div class="box box-primary">
    <div class="box-header">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">To Do List</h3>
        <div class="box-tools pull-right">
            <button type="button" onclick="toDoTaskCRUD(0)" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Add Task</button>
        </div>
    </div>
    <div class="box-body slimScrollDiv_custom">
        <ul class="todo-list">
            @for (int i = 0; i < Model.Count; i++)
            {
                string colorClass = "";
                if (i % 2 == 0)
                {
                    colorClass = "label label-success";
                }
                else
                {
                    colorClass = "label label-warning";
                }
                <li>
                    <!-- drag handle -->
                    <span class="handle">
                        <i class="fa fa-ellipsis-v"></i>
                        <i class="fa fa-ellipsis-v"></i>
                    </span>
                    <!-- checkbox -->
                    @Html.CheckBoxFor(r => Model[i].IsCompleted)
                    <!-- todo text -->
                    <span class="text">@Html.DisplayFor(r => Model[i].ToDoSubject)</span>
                    <!-- Emphasis label -->
                    <small class="@colorClass"><i class="fa fa-clock-o"></i> @Html.DisplayFor(r => Model[i].ToDoDate)</small>
                    <!-- General tools such as edit or delete-->
                    <div class="tools">
                        <i class="fa fa-edit" onclick="toDoTaskCRUD('@Model[i].ToDoId')"></i>
                        <i class="fa fa-trash-o" onclick="toDoTaskCRUD_Delete_Confirm('@Model[i].ToDoId')"></i>
                    </div>
                    <p class="text-sm minimize" style="padding-left:8%;">@Html.DisplayFor(r => Model[i].ToDoDescription)</p>
                </li>
            }
        </ul>
    </div>
</div>

<script>    
    $(function () {
        $(".slimScrollDiv_custom").slimScroll({
            height: "300",
            size: "7px",
            alwaysVisible: false
        });
    });
</script>