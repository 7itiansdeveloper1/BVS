@model ISas.Entities.DashboardEntities.ToDo_TaskEntitiesModel

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="alert alert-info alert-dismissible" id="autoHideMsgDiv" style="z-index:1;position: absolute;min-width:98%;max-width:98%;display:none;">
            @*<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>*@
            <h4><i id="autoHideDivTitleIcon" class="icon fa fa-info"></i> <span id="autoHideDivTitle"> Alert! </span> </h4>
            <p id="autoHideDivMsg"> Info alert preview. This alert is dismissable.</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("ToDo_Task_CRUD", "ToDo_Task", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(r => Model.ToDoId)
    @Html.HiddenFor(r => Model.ReferenceId)

    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-8">
                    <div class="form-group">
                        <label for="">@Html.LabelFor(r => Model.ToDoSubject)<i class="mandateLbl">*</i></label>
                        <div class="select">
                            @Html.TextBoxFor(m => m.ToDoSubject, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(r => Model.ToDoSubject, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="form-group">
                        <label for="">@Html.LabelFor(r => Model.ToDoDate)<i class="mandateLbl">*</i></label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.TextBoxFor(m => m.ToDoDate, htmlAttributes: new { @class = "form-control pull-right date" })
                            @Html.ValidationMessageFor(r => Model.ToDoDate, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                        <!-- /.input group -->
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="form-group">
                        <label for="">@Html.LabelFor(r => Model.ToDoDescription)<i class="mandateLbl">*</i></label>
                        <div class="select">
                            @Html.TextAreaFor(m => m.ToDoDescription, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(r => Model.ToDoDescription, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-success" id="savebutton" type="button" onclick="CommonAjaxPost(this);setTimeout(function () {  getToDoList(); }, 1500);">SAVE</button>
            @*<button class="btn btn-default" type="button" onclick="window.location.reload()">RESET</button>*@
        </div>
    </div>
}

<script>
     $(function () {
            $('.date').bootstrapDP({
                autoclose: true,
                format: 'dd/mm/yyyy'
            });
        });
</script>