        $(document).on('change', "#ddlClassList", function () {
            $.ajax({
                url: $('#ddlClassList').attr('dataChangeUrl'),
                data: { classSectionId: $('#ddlClassList').val() },
                type: 'get',
                success: (function (data) {
                    var $ddlSubject = $('#ddlSubjectList');
                    $ddlSubject.empty();
                    $ddlSubject.append($("<option />").text("--- Select Subject ---"));
                    $.each(data, function () {
                        $ddlSubject.append($("<option />").val(this.Value).text(this.Text));
                    })
                }),
                fail: (function (error) {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
                })
            })
        });

        $(document).on('change', "#ddlSubjectList", function () {
            $.ajax({
                url: $('#ddlSubjectList').attr('dataChangeUrl'),
                beforeSend: function () {
                    spinnerShow();
                },
                data: {
                    
                    classSectionId: $('#ddlClassList').val(), 
                    subjectId: $('#ddlSubjectList').val(),
                    subjectName: $('#ddlSubjectList option:selected').text(),
                    className: $('#ddlClassList option:selected').text(),
                },
