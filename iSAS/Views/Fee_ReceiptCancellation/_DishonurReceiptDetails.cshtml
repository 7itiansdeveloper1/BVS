@model ISas.Entities.FeesEntities.Fee_ReceiptCancellationModels
@{ 
    Model.CRUDMode = "DISHON";
}
<div class="box box-primary">

    @Html.HiddenFor(r => Model.Selected_ERPNo)
    @Html.HiddenFor(r => Model.Selected_ReceiptNo)
    @Html.HiddenFor(r => Model.CRUDMode)

    <div class="box-header with-border">
        <h5 class="box-title">Cheque Dishonour Details</h5>
        <h5 class="box-title pull-right">Student Name : <strong class="text-primary">@Html.DisplayFor(r => Model.Selected_StudentName)</strong>  </h5>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.TransReferenceNo)</label>
                    <div class="select">
                        @Html.TextBoxFor(m => m.TransReferenceNo, htmlAttributes: new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(r => Model.TransReferenceNo, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>


            <div class="col-xs-12 col-sm-6 col-md-2">
                @Html.HiddenFor(r=> Model.TransDate)
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.TransDate)</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        @Html.TextBoxFor(m => m.TransDate, htmlAttributes: new { @class = "form-control pull-right", @readonly = true, disabled = true })
                        @Html.ValidationMessageFor(r => Model.TransDate, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                    <!-- /.input group -->
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.TransBank)</label>
                    <div class="select">
                        @Html.TextBoxFor(m => m.TransBank, htmlAttributes: new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(r => Model.TransBank, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.TransBranch)</label>
                    <div class="select">
                        @Html.TextBoxFor(m => m.TransBranch, htmlAttributes: new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(r => Model.TransBranch, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.ChequeAmt)</label>
                    <div class="select">
                        @Html.TextBoxFor(m => m.ChequeAmt, htmlAttributes: new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(r => Model.ChequeAmt, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover table-condensed" id="tblDisDetails">
                    <thead>
                        <tr>
                            <th>@Html.CheckBox("chkboxAllSelect", false, htmlAttributes: new { onchange = "ChecktoSelectAllDishList()" })</th>
                            <th>S. No</th>
                            <th>Rec. No</th>
                            <th>Adm. No</th>
                            <th>Student</th>
                            <th>Class</th>
                            <th>Install</th>
                            <th>Due</th>
                            <th>Paid</th>
                            <th>Balance</th>
                            <th>Excess</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.ReceiptDetail_OfDishList != null)
                        {
                            int count = 0;
                            for (int i = 0; i < Model.ReceiptDetail_OfDishList.Count; i++)
                            {
                                <tr>
                                    <td>@Html.CheckBoxFor(r => Model.ReceiptDetail_OfDishList[i].Selected, htmlAttributes: new { @class = "chkboxDish" })</td>
                                    <td>
                                        @Html.DisplayFor(r => count)

                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].ERPNo)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].StudentName)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].AdmNo)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].ClassName)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].Due)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].Paid)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].Balance)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].Excess)
                                        @Html.HiddenFor(r => Model.ReceiptDetail_OfDishList[i].Duration)
                                    </td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].ReceiptNo)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].AdmNo)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].StudentName)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].ClassName)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].Duration)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].Due)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].Paid)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].Balance)</td>
                                    <td>@Html.DisplayFor(r => Model.ReceiptDetail_OfDishList[i].Excess)</td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-2">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.DishDate)</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        @Html.TextBoxFor(m => m.DishDate, htmlAttributes: new { @class = "form-control pull-right date" })
                        @Html.ValidationMessageFor(r => Model.DishDate, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                    <!-- /.input group -->
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-2">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.DishAmt)</label>
                    <div class="select">
                        @Html.TextBoxFor(m => m.DishAmt, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => Model.DishAmt, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <br /><h5>
                    <button title="Cheque Dishonour" class="btn btn-info btn-sm" type="button" onclick="DoAjaxPostAndMore(this)">
                        SAVE
                    </button>
                </h5>
            </div>
        </div>
    </div>
</div>

<script>
    $('.date').bootstrapDP({
        autoclose: true,
        format: 'dd/mm/yyyy'
    });
</script>
