@using ISas.Web.Models;
@model List<ISas.Entities.Academic.Academic_FOD>
@{
    int rowlength = 0;
    if (Model != null && Model.Count > 0)
    {
        rowlength = Model.Count;
    }
}
<!-- /.box -->
<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Food for Thought List</h5>
        </div>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Message Text</th>
                    <th>Is Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr class="editable" id="editable_@i">
                            <td>
                                @Html.DisplayFor(r => Model[i].MonthDay)
                                @Html.HiddenFor(r => Model[i].FODId, htmlAttributes: new { })
                            </td>
                            <td>
                                @Html.DisplayFor(r => Model[i].MessageText)
                                @*@Html.TextBoxFor(r => Model[i].MessageText, htmlAttributes: new { @class = "form-control editableFeild_" + @i + "", id = "BankName_" + @i, @readonly = true })*@
                            </td>
                            <td>@Html.CheckBoxFor(r=>Model[i].IsActive)</td>
                            <td class="text-center">
                                @Html.EncodedActionLink(" ", "Updation", "Academic_FOD", new { FodId = Model[i].FODId.ToString()}, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Text"})
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<script>
    $(function () {
        $('#example1').DataTable();
        $('#hddnRowLenght').val('@rowlength');
    });
</script>