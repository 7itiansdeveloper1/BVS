@model ISas.Entities.Exam_Entities.Exam_Template_GradingSetupModels

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="alert alert-info alert-dismissible" id="autoHideMsgDiv" style="z-index:1;position: absolute;min-width:98%;max-width:98%;display:none;">
            @*<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>*@
            <h4><i id="autoHideDivTitleIcon" class="icon fa fa-info"></i> <span id="autoHideDivTitle"> Alert! </span> </h4>
            <p id="autoHideDivMsg"> Info alert preview. This alert is dismissable.</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("TempleteGradingSetup_CRUD", "Exam_TemplateSetup", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(r => Model.ExamTemplateId)
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="">@Html.LabelFor(r => Model.AcademicId)</label>
                <div class="select">
                    @Html.DropDownListFor(m => m.AcademicId, Model.AcademicList, "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%" })
                    @Html.ValidationMessageFor(r => Model.AcademicId, null, htmlAttributes: new { style = "color:red;" })
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="">@Html.LabelFor(r => Model.NonAcademicId)</label>
                <div class="select">
                    @Html.DropDownListFor(m => m.NonAcademicId, Model.NonAcademicList, "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%" })
                    @Html.ValidationMessageFor(r => Model.NonAcademicId, null, htmlAttributes: new { style = "color:red;" })
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="">@Html.LabelFor(r => Model.ReportCardId)</label>
                <div class="select">
                    @Html.DropDownListFor(m => m.ReportCardId, Model.ReportCardList, "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%" })
                    @Html.ValidationMessageFor(r => Model.ReportCardId, null, htmlAttributes: new { style = "color:red;" })
                </div>
            </div>
        </div>
    </div>


    <div class="row" style="border-top:1px solid #808080;">
        <div class="col-md-12">
            <button style="margin-top:2%;margin-right:1%;" type="button" onclick="CommonAjaxPost(this); setTimeout(function () { $('#mainModalWithSave').modal('toggle'); }, 1500);" class="btn btn-success">SAVE</button>
            <button style="margin-top:2%;" type="button" class="btn btn-default" data-dismiss="modal">CLOSE</button>
        </div>
    </div>
}

<script>
    $(function () {
        //Initialize Select2 Elements
        $('.select2').select2()
    });
</script>