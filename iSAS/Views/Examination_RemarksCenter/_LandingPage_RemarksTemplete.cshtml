@using ISas.Web.Models;
@model List<ISas.Entities.Examination_Entities.Examination_RemarksTempleteModels>

<table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%;">
    <thead>
        <tr>
            <th>#</th>
            <th>Templete Name</th>
            <th>Class</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ int count = 1;
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(r => count)</td>
                    <td>@Html.DisplayFor(r => Model[i].TemplateName)</td>
                    <td>@Html.DisplayFor(r => Model[i].Classes)</td>
                    <td>
                        <a href="#" title="Edit Remarks" class="fa fa-edit btnDefaultColor" onclick="EditTempleteRemarks('@Model[i].TemplateId')"></a>
                        <a href="#" title="Class Setup" class="fa fa-gear btnDefaultColor" onclick="TempleteRemarks_ClassSetup('@Model[i].TemplateId', '@Model[i].TemplateName')"></a>

                        @Html.EncodedActionLink(" ", "New_RemarksCenter", "Examination_RemarksCenter", new { TempleteId = Model[i].TemplateId, TempleteName = Model[i].TemplateName }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "Remarks Templete Setup" })
                    </td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>

<script>
    $('#example1').DataTable({});
</script>