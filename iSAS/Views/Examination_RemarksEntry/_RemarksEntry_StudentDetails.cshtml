@model ISas.Entities.Examination_Entities.Examination_RemarksEntryModels
@{
    int count = 1;
    string reportName = "Remarks Entry";
}

<div style="display:none;">
    @{ Html.RenderAction("_ReportHeader", "Common", new { tempReportName = @reportName });}
</div>

<table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%;">
    <thead>
        <tr>
            <th>#</th>
            <th>Adm No.</th>
            <th>Student</th>
            <th>Remark</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.StudentDetails.Count; i++)
         {

            <tr>
                <td>
                    @Html.DisplayFor(r => count)
                    @Html.HiddenFor(r => Model.StudentDetails[i].ERPNo)
                </td>
                <td>@Html.DisplayFor(r => Model.StudentDetails[i].AdmNo)</td>
                <td>@Html.DisplayFor(r => Model.StudentDetails[i].Student)</td>
                <td><span class="no-print"> @Html.DropDownListFor(r => Model.StudentDetails[i].RemarkId, new SelectList(Model.RemarksList, "Value", "Text", Model.StudentDetails[i].RemarkId), "--Select Remarks --", htmlAttributes: new { @class = "form-control select2", style = "width:100%;" })</span></td>
            </tr>
            count++;
        }
    </tbody>
</table>
<script>
    $("#example1 tr").click(function (evt) {
        if (evt.ctrlKey) {
            $(this).toggleClass("selected");
        } else {
            var selected = $(this).hasClass("selected");
            $("#example1 tr").removeClass("selected");
            if (!selected)
                $(this).addClass("selected");
        }
    });

    $(document).ready(function () {
        $('#example1').DataTable({
            "pageLength": 50,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'Copy',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (xlsx) {
                        console.log(xlsx);

                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'Print',
                    title: "",
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (win) {
                        $(win.document.body)
                            //.css('font-size', '10pt')
                            .prepend($('#reportHeaderDiv').html()); //'<img src="http://localhost:60254/Images/System/balVikasLog.jpg" style="" />'
                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                },
                'colvis'
            ],
            select: true
        });
    });
</script>

<script>
    $(function () {
        $('.select2').select2()
    })
</script>