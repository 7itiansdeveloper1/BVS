@model ISas.Entities.HR_Payroll_Entities.HR_Payroll_FinalCTSModels


<section class="content-header">
    <h1>
        Final CTS For : <span class="text-primary">@Html.DisplayFor(r => Model.PayBandName)</span>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>HR & Payroll</li>
        <li><a href="@Url.Action("New", "HR_Payroll_PayBandMaster")">PayBand Master</a></li>
        <li>Final CTS </li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary collapsed-box">
        <!-- /.box-header -->
        <div class="box-header with-border">
            <h5 class="box-title">Final CTS List</h5>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped  dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>S. No</th>
                        <th>Staff Name</th>
                        @for (int i = 0; i < Model.HeadNameList.Count; i++)
                        {
                            <th>
                                @Html.HiddenFor(r => Model.HeadNameList[i])
                                @Html.DisplayFor(r => Model.HeadNameList[i])
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.FinalCTSList.Count > 0)
                    {
                        int count = 1;
                        for (int i = 0; i < Model.FinalCTSList.Count; i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(r => count)</td>
                                <td>
                                    @Html.DisplayFor(r => Model.FinalCTSList[i].StaffName)
                                    @Html.HiddenFor(r => Model.FinalCTSList[i].StaffId)
                                </td>
                                @for (int j = 0; j < Model.FinalCTSList[i].PayBandCTSDetails.Count; j++)
                                {
                                    <td>
                                        @Html.DisplayFor(r => Model.FinalCTSList[i].PayBandCTSDetails[j])
                                    </td>
                                }
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>


    @using (Html.BeginForm("HR_Payroll_FinalCTS_CRUD", "HR_Payroll_FinalCTS", FormMethod.Post, htmlAttributes: new { }))
    {
        <div class="box box-success">
            <!-- /.box-header -->
            <div class="box-header with-border">
                <h5 class="box-title">CTS Estimation</h5>
                <h5 class="box-title pull-right">
                    <button class="btn btn-success btn-sm" id="btnSave" type="button" onclick="DoAjaxPostAndMore(this)">SAVE</button>
                    <button class="btn btn-default btn-sm" type="button" onclick="window.location.reload()">RESET</button>
                </h5>
            </div>

            @Html.HiddenFor(r => Model.PayBandId)
            @Html.HiddenFor(r => Model.PayBandName)

            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped  dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>S. No</th>
                            <th>@Html.CheckBox("chkBoxAllFinalCTS", false, htmlAttributes: new { onchange = "Fun_checkFinalCTS()" }) </th>
                            <th>Staff Name</th>
                            @for (int i = 0; i < Model.HeadNameList.Count; i++)
                            {
                                <th>
                                    @Html.HiddenFor(r => Model.HeadNameList[i])
                                    @Html.DisplayFor(r => Model.HeadNameList[i])
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.StaffDetails.Count > 0)
                        {
                            int count = 1;
                            for (int i = 0; i < Model.StaffDetails.Count; i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(r => count)</td>
                                    <td>
                                        @Html.CheckBoxFor(r => Model.StaffDetails[i].Selected, htmlAttributes: new { @class = "chkBoxFinalCTS" })
                                        @Html.HiddenFor(r => Model.StaffDetails[i].StaffId)
                                        @Html.HiddenFor(r => Model.StaffDetails[i].StaffName)
                                    </td>
                                    <td>@Html.DisplayFor(r => Model.StaffDetails[i].StaffName)</td>
                                    @for (int j = 0; j < Model.StaffDetails[i].PayBandCTSDetails.Count; j++)
                                    {
                                        <td>
                                            @Html.TextBoxFor(r => Model.StaffDetails[i].PayBandCTSDetails[j], htmlAttributes: new { @class = "form-control" })
                                        </td>
                                    }
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    }
</section>


<script>
    function Fun_checkFinalCTS() {
        if ($('#chkBoxAllFinalCTS').is(':checked')) {
            $('.chkBoxFinalCTS').prop('checked', true);
        } else {
            $('.chkBoxFinalCTS').prop('checked', false);
        }
    }

    function DoAjaxPostAndMore(btnClicked) {
        var selectedEmpCount = 0;
        $('#example1 > tbody > tr').each(function (i) {
            if ($('#StaffDetails_' + i + '__Selected').is(':checked')) {
                selectedEmpCount++;
            }
        });

        if (parseInt(selectedEmpCount) == 0) {
            OpenMessegeAutoHideDiv('No Employee is Selected..!', 'Info');
            return false;
        }

        $('#btnSave').attr('disabled', true);
        var $form = $(btnClicked).parents('form');
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: $form.attr('action'),
            data: $form.serialize(),
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                if (response.status == 'success') {
                    OpenMessegeAutoHideDiv(response.Msg, 'Success');
                    setTimeout(function () { window.location.reload(); }, $('#hddnReloadTime').val());
                }
                else {
                    AddErrorAttributeCSS(response.ErrorList); //Available in CustomCommon.js
                    AddValidAttributeCSS(response.ValidKeyList); //Available in CustomCommon.js
                }
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>