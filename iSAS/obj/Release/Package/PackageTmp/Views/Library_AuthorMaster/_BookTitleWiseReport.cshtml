@model  List<ISas.Entities.LibraryEntities.Library_Author_BookTitleWiseReportModel>
@{
    string reportName = @ViewBag.reportName;
}
<div style="display:none;">
    @{ Html.RenderAction("_ReportHeader", "Common", new { tempReportName = @reportName });}
</div>


<table id="example2" class="table table-responsive table-bordered table-condensed nowrap" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Acc. No.</th>
            <th>Title</th>
            <th>Almirah No.</th>
            <th>Shelf No.</th>
            <th>Book Cell</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Html.DisplayFor(r => Model[i].Sno)</td>
                <td>@Html.DisplayFor(r => Model[i].AccNo)</td>
                <td>@Html.DisplayFor(r => Model[i].Title)</td>
                <td>@Html.DisplayFor(r => Model[i].AlmirahNo)</td>
                <td>@Html.DisplayFor(r => Model[i].ShelfNo)</td>
                <td>@Html.DisplayFor(r => Model[i].BookCall)</td>
            </tr>
        }
    </tbody>
</table>

<script>
     $("#example2 tr").click(function (evt) {
        if (evt.ctrlKey) {
            $(this).toggleClass("selected");
        } else {
            var selected = $(this).hasClass("selected");
            $("#example2 tr").removeClass("selected");
            if (!selected)
                $(this).addClass("selected");
        }
    });

    $(document).ready(function () {
        $('#example2').DataTable({
            "pageLength": 10,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'Copy',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (xlsx) {
                        console.log(xlsx);

                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'Print',
                    title: "",
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (win) {
                        $(win.document.body)
                            //.css('font-size', '10pt')
                            .prepend($('#reportHeaderDiv').html()); //'<img src="http://localhost:60254/Images/System/balVikasLog.jpg" style="" />'
                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                },
                'colvis'
            ],
            select: true
        });
    });
</script>