@model ISas.Entities.StudentSearchByPropertyModel


<section class="content-header">
    <h1>Student Search</h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Student</li>
        <li>Student Search</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h5 class="box-title"> Student Search <i class="fa fa-search"></i> </h5>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="radio">
                                    <label>@Html.RadioButtonFor(m => m.SearchType, "FieldSearch", htmlAttributes: new { @checked = "checked" }) Text Search </label>
                                    @*<label>@Html.RadioButtonFor(m => m.SearchType, "Father", htmlAttributes: new { })Father</label>
                                    <label>@Html.RadioButtonFor(m => m.SearchType, "Mother", htmlAttributes: new { })Mother</label>
                                    <label>@Html.RadioButtonFor(m => m.SearchType, "Mobile", htmlAttributes: new { }) Mobile </label>
                                    <label>@Html.RadioButtonFor(m => m.SearchType, "AdmNo", htmlAttributes: new { }) Adm. No. </label>
                                    <label>@Html.RadioButtonFor(m => m.SearchType, "ERPNo", htmlAttributes: new { }) ERP No. </label>*@
                                    <label>@Html.RadioButtonFor(m => m.SearchType, "Class", htmlAttributes: new { }) Class </label>
                                    @Html.ValidationMessageFor(r => Model.SearchType, null, htmlAttributes: new { style = "color:red;" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="">
                                    @Html.DropDownListFor(m => m.SelectedClassID, new SelectList(Model.ClassList, "Value", "Text"), htmlAttributes: new { @class = "form-control select2", style = "width:100%;" })
                                    @Html.ValidationMessageFor(r => Model.SelectedClassID, null, htmlAttributes: new { style = "color:red;" })
                                </div>
                                <!-- /.input group -->
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <div class="">
                                    @Html.TextBoxFor(m => m.SearchText, htmlAttributes: new { @class = "form-control", placeholder = "Enter father, mother, student names, mobile, admission etc.." })
                                    @Html.ValidationMessageFor(r => Model.SearchText, null, htmlAttributes: new { style = "color:red;" })
                                </div>
                                <!-- /.input group -->
                            </div>
                        </div>
                        <div class="col-md-2">
                            <input type="button" value="GO" class="btn btn-success" onclick="getStudentDetails()" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h5 class="box-title">Search Details</h5>
                        </div>
                        <div class="box-body">
                            <div class="" id="studentDetailsMainDiv">
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






<script>
    function getStudentDetails() {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Student_Search/_SearchResult",
            data: {
                SearchType: $("#SearchType:checked").val(), SearchText: $('#SearchText').val(), ClassID: $('#SelectedClassID').val(),
                SelectedRow : '@Model.selectedRow'
            },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                $('#studentDetailsMainDiv').html(response);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>