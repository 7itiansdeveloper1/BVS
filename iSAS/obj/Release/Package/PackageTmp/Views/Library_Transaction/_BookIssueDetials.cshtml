@model ISas.Entities.LibraryEntities.Library_TransactionModels
@{ 
    int issueBookCount = 0;
    if(Model != null && Model.BookIssueDetails != null)
    {
         issueBookCount = Model.BookIssueDetails.BookDetails.Count;
    }
}

<table class="table table-striped table-bordered table-condensed table-hover table-responsive" id="tblBookIssueDetails">
    <thead>
        <tr>
            <th>Acc No</th>
            <th>Book Name</th>
            <th>Author</th>
            <th>Issue Days</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.BookIssueDetails.BookDetails.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(r => Model.BookIssueDetails.BookDetails[i].AccNo)
                    @Html.HiddenFor(r => Model.BookIssueDetails.BookDetails[i].BookName)
                    @Html.HiddenFor(r => Model.BookIssueDetails.BookDetails[i].AuthorName)
                    @Html.HiddenFor(r => Model.BookIssueDetails.BookDetails[i].IssuedDays)

                    @Html.DisplayFor(r => Model.BookIssueDetails.BookDetails[i].AccNo)
                </td>
                <td>@Html.DisplayFor(r => Model.BookIssueDetails.BookDetails[i].BookName)</td>
                <td>@Html.DisplayFor(r => Model.BookIssueDetails.BookDetails[i].AuthorName)</td>
                <td>@Html.DisplayFor(r => Model.BookIssueDetails.BookDetails[i].IssuedDays)</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(function () {
        $('#issueBookCount').html(@issueBookCount);
        $('#hddnIssueBookCount').val(@issueBookCount);
    });
</script>