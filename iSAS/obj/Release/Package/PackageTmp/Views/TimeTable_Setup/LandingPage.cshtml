@using ISas.Web.Models;
@model List<ISas.Entities.TimeTable_Entities.TimeTable_ConfigurationModels>
@{ 
    int count = 1;
}
<section class="content-header">
    <h1>
        Timetable Setup
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Time Table</li>
        <li class="active">Timetable Setup</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h5 class="box-title">Class Wise List </h5>
        </div>
        <div class="box-body">
            <table class="table table-responsive table-bordered table-condensed table-hover" id="tablename">
                <thead>
                    <tr>
                        <th>S. No.</th>
                        <th>Class Name</th>
                        <th>Class Teacher</th>
                        <th>Matrix</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Html.DisplayFor(r=> count)</td>
                            <td>
                                @Html.DisplayFor(r => Model[i].ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(r => Model[i].ClassTeacher)
                            </td>
                            <td>
                                @Html.DisplayFor(r => Model[i].Matrix)
                            </td>
                            <td class="text-center">
                                @Html.EncodedActionLink(" ", "New", "TimeTable_PeriodTimingSetup", new { ClassSectionId = Model[i].ClassSectionId, ClassSectionName = Model[i].ClassName, ClassTeacher = Model[i].ClassTeacher }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "Period Time setup", style = "margin-right:3%;" })
                                @Html.EncodedActionLink(" ", "New", "TimeTable_Setup", new { ClassSectionId = Model[i].ClassSectionId, ClassSectionName = Model[i].ClassName, ClassTeacherName = Model[i].ClassTeacher }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "Class time table setup"})
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#tablename').DataTable({
            "pageLength":50
        });
    });
</script>
