@model ISas.Entities.HR_Payroll_Entities.HR_Payroll_AttendanceProcessModels

<table id="example1" class="table table-bordered table-striped  dt-responsive nowrap">
    <thead>
        <tr>
            <th>S. No</th>
            <th>Staff Name</th>
            @for (int i = 0; i < Model.HeadNameList.Count; i++)
            {
                <th>
                    @Html.HiddenFor(r => Model.HeadNameList[i])
                    @Html.DisplayFor(r => Model.HeadNameList[i])
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.MontyelyAttenList.Count > 0)
        {
            int count = 1;
            for (int i = 0; i < Model.MontyelyAttenList.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(r => count)</td>
                    <td>
                        <span class="text-primary" title="Click Here to Apply Leave" style="cursor:pointer;" onclick="ApplyLeaveView('@Model.MontyelyAttenList[i].StaffID', '@Model.MontyelyAttenList[i].StaffName')"> <b> <i> <u>  @Html.DisplayFor(r => Model.MontyelyAttenList[i].StaffName)</u></i> </b></span>
                        @Html.HiddenFor(r => Model.MontyelyAttenList[i].StaffID)
                        @Html.HiddenFor(r => Model.MontyelyAttenList[i].StaffName)
                    </td>
                    @for (int j = 0; j < Model.MontyelyAttenList[i].ValuesList.Count; j++)
                    {
                        <td>
                            @Html.DisplayFor(r => Model.MontyelyAttenList[i].ValuesList[j])
                        </td>
                    }
                </tr>
                count++;
            }
        }
    </tbody>
</table>