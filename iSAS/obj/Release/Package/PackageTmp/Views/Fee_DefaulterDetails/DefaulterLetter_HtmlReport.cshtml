@model ISas.Entities.FeesEntities.DefaulterLetter_ReportModel
@{
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
    int recordCount = Model.StudentDetails.Count; int currentRow = 0;
    int Quotient = recordCount / 4;
    int Remainder = recordCount % 4;
}
<link href="~/bower_components/pageSize/PageSize.css" rel="stylesheet" />
@for (int i = 0; i < Quotient; i++)
{
    <page size="A4">
        @for (int j = 0; j < 4; j++)
        {
            <table style="font-size:16px;width:100%;">
                <tr>
                    <td style="padding:2%;"> <img src="~/@Model.HeaderDetails.LogoURL" height="70" width="70" /></td>
                    <td class="text-center text-red" style="font-size:21px;padding-right:2%;">
                        <strong>
                            @Html.DisplayFor(r => Model.HeaderDetails.Header1) @Html.DisplayFor(r => Model.HeaderDetails.Header2)
                            <br /><span style="font-size:16px;">@Html.DisplayFor(r => Model.HeaderDetails.Header3) @Html.DisplayFor(r => Model.HeaderDetails.Header4)</span>
                            <br /><span style="font-size:18px;">@Html.DisplayFor(r => Model.HeaderDetails.ReportName)</span>
                        </strong>
                    </td>
                </tr>
            </table>
            <table style="width:100%;">
                <tr>
                    <td style="width:20px;">&nbsp;</td>
                    <td class="text-right" style="padding-right:2%;">
                        <strong> Date </strong> : @DateTime.Now.ToShortDateString()
                    </td>
                    <td style="width:20px;">&nbsp;</td>
                </tr>
                <tr><td colspan="3">&nbsp;</td></tr>
                <tr><td style="width:20px;">&nbsp;</td><td colspan="2"><strong>Dear Parents,</strong></td></tr>
                <tr>
                    <td style="width:20px;">&nbsp;</td>
                    <td>
                        <p>
                            Kindly deposit Fee Rs. <label style="min-width:150px;border-bottom:1px dashed black;text-align:center;">@Html.DisplayFor(r => Model.StudentDetails[currentRow].Balance)</label>
                            for the  <label style="min-width:150px;border-bottom:1px dashed black;text-align:center;">@Html.DisplayFor(r => Model.StudentDetails[currentRow].Duration)</label>
                            of your ward  <label style="min-width:150px;border-bottom:1px dashed black;text-align:center;">@Html.DisplayFor(r => Model.StudentDetails[currentRow].Student)</label> <br />
                            class  <label style="min-width:150px;border-bottom:1px dashed black;text-align:center;">@Html.DisplayFor(r => Model.StudentDetails[currentRow].Class)</label>
                            S/O  <label style="min-width:150px;border-bottom:1px dashed black;text-align:center;">@Html.DisplayFor(r => Model.StudentDetails[currentRow].Father)</label>
                            by the next  <label style="min-width:150px;border-bottom:1px dashed black;text-align:center;">@Html.DisplayFor(r => Model.StudentDetails[currentRow].ByDate)</label>
                            positively.
                        </p>
                    </td>
                    <td style="width:20px;">&nbsp;</td>
                </tr>
                <tr>
                    <td style="width:20px;">&nbsp;</td>
                    <td class="pull-right"><strong>ADMINISTRATION</strong></td>
                    <td style="width:20px;">&nbsp;</td>
                </tr>
                <tr>
                    <td style="width:20px;">&nbsp;</td>
                    <td style="padding-left:5%;padding-right:5%;border-bottom:2px solid black;">&nbsp;</td>
                    <td style="width:20px;">&nbsp;</td>
                </tr>
            </table>

            currentRow++;
        }
    </page>
    <div style="page-break-after:always;">&nbsp;</div>
}

