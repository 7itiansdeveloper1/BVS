@model List<ISas.Entities.Student_TC>
<div class="content-box-large">
    <form>
        <div class="formSec">
            <div class="row">
                <div class="col-md-12 text-right form-group">
                    @*<button class="btn btn-default" type="submit">New Admission</button>*@
                    @Html.ActionLink("New TC", "NewTC", "Student_TC", new { }, htmlAttributes: new { @class = "btn btn-default" })
                </div>
                <div class="col-xs-12">
                    <div class="table-responsive searchtable table_ev_od">
                        <table class="table table-responsive table-bordered table-condensed table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>TC No</th>
                                    <th>Applied Date</th>
                                    <th>Creation Date</th>
                                    <th>Issue Date</th>
                                    <th>Student Name</th>
                                    <th>Class</th>
                                    <th>TC Reason</th>
                                    <th>Is Cancelled</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].TCNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].AppliedDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].CreationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].IssueDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].Student)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].ClassName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(r => Model[i].ReasonForTC)
                                        </td>
                                        <td>
                                            @Html.CheckBoxFor(r => Model[i].IsTCCancelled)
                                        </td>
                                        
                                       
                                        <td class="text-center">
                                            @Html.ActionLink(" ", "EditTC", "Student_TC", new { TCID = Model[i].TCNo }, htmlAttributes:new { @class = "glyphicon glyphicon-edit" })
                                        </td>
                                    </tr>
                                    
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--<div class="btnSec">
                      <button class="btn orangedarkBtn" type="submit">Save</button>
                      <button class="btn btn-default" type="submit">Delete</button>
                      <button class="btn btn-default" type="submit">Reset</button>
                      </div> -->
        </div>
    </form>
</div>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>

