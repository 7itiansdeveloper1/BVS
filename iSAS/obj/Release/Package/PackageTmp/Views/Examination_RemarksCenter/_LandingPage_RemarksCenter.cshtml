@model List<ISas.Entities.Examination_Entities.Examination_RemarksCenterModels>

<table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%;">
    <thead>
        <tr>
            <th>#</th>
            <th>Remarks</th>
            <th>Active</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ int count = 1;
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(r => count)</td>
                    <td>@Html.DisplayFor(r => Model[i].Remark)</td>
                    <td>@Html.DisplayFor(r => Model[i].IsActive)</td>
                    <td>
                        <a href="#" title="Edit Remarks" class="fa fa-edit btnDefaultColor" onclick="EditTempleteRemarks('@Model[i].RemarkId')"></a>
                    </td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>

<script>
    $('#example1').DataTable({});
</script>