@model ISas.Entities.FeesEntities.Fee_MiscDueModel
<table class="table table-hover table-bordered table-responsive" id="tblMiscDue">
    <thead>
        <tr>
            <th>@Html.CheckBox("selectAllFeeDue", false, htmlAttributes: new { onchange = "fun_checkToSelectAllMiscDue()" })</th>
            <th>Adm. No.</th>
            <th>Student Name</th>
            <th>Father</th>
            <th>Ref. No.</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.MiscDueStudentDetails.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(r => Model.MiscDueStudentDetails[i].ERPNo)
                    @Html.HiddenFor(r => Model.MiscDueStudentDetails[i].TransRefNo)
                    @Html.CheckBoxFor(r => Model.MiscDueStudentDetails[i].Selected, htmlAttributes: new { @class = "chkBoxMiscDue" })
                </td>
                <td>@Html.DisplayFor(r => Model.MiscDueStudentDetails[i].AdmNo)</td>
                <td>@Html.DisplayFor(r => Model.MiscDueStudentDetails[i].StudentName)</td>
                <td>@Html.DisplayFor(r => Model.MiscDueStudentDetails[i].Father)</td>
                <td>@Html.DisplayFor(r => Model.MiscDueStudentDetails[i].TransRefNo)</td>
                <td>@Html.DisplayFor(r => Model.MiscDueStudentDetails[i].Amount)</td>
                <td>
                    <a href="#" class="fa fa-pencil-square-o btnDefaultColor" title="Change Due Amount" onclick="EnterAmount_ToUpdateMiscDue('@i', '@Model.MiscDueStudentDetails[i].StudentName')"></a>
                    <a href="#" class="fa  fa-times text-danger" title="Cancel Due" onclick="CancelMiscDueConfirm('@i', '@Model.MiscDueStudentDetails[i].StudentName')"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('#tblMiscDue').DataTable({
        "pageLength": 50
    });
</script>

