@model List<ISas.Entities.SMSManagement.UnDeliveredSMSDetailsModel>
@{

    int count = 0;
    if (Model != null && Model.Count > 0)
    {
        count = Model.Count;
    }

    if (@ViewBag.IsForPrint == "YES")
    {
        Layout = "~/Views/Shared/_LayoutPrint.cshtml";
    }
}
<div @*class="table-responsive searchtable table_ev_od"*@>
    <table border="0" class="table table-bordered table-responsive" id="tblUnDeliveredSMSDetailList">
        <thead>
            <tr>
                <th>SNO</th>
                <th>Name</th>
                <th>Class</th>
                <th>Father's Name</th>
                <th>Mother's Name</th>
                <th>SMS Mobile No</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(r => Model[i].ERPNo, htmlAttributes: new { id = "ERPNo_" + @i + "" })
                            @Html.DisplayFor(r => Model[i].Sno)
                        </td>
                        <td> @Html.DisplayFor(r => Model[i].Student) </td>
                        <td>@Html.DisplayFor(r => Model[i].Class)</td>
                        <td> @Html.DisplayFor(r => Model[i].Father) </td>
                        <td> @Html.DisplayFor(r => Model[i].Mother)  </td>
                        <td> @Html.DisplayFor(r => Model[i].Mobile) </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        if ('@count' > 0) {
            $('#btnCreateReport').attr('disabled', false);
            $('#btnPrintReport').attr('disabled', false);
        } else {
            $('#btnCreateReport').attr('disabled', true);
            $('#btnPrintReport').attr('disabled', true);
        }
    });
</script>