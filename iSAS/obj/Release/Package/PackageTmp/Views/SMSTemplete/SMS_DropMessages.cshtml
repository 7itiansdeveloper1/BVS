@model  ISas.Entities.SMSManagement.SMS_DropMessagesPageModel


<section class="content-header">
    <h1>
        Drop Message
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>SMS</li>
        <li class="active">Drop Message</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label for="">Text Box</label>
                                @Html.TextAreaFor(r => Model.MobileNos, htmlAttributes: new { style = "height:500px;width:100%;" })
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-3 ">
                            <div class="table-responsive searchtable table_ev_od" style="overflow-y:auto;max-height:500px;">
                                <table border="0" class="table table-bordered table-responsive" id="tblClassList">
                                    <thead>
                                        <tr>
                                            <th>Select</th>
                                            <th>ClassName</th>
                                            @*<th>Wing</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.ClassList.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.HiddenFor(r => Model.ClassList[i].Value)
                                                    @*<input type="checkbox" id="higherclass">*@
                                                    @Html.CheckBoxFor(r => Model.ClassList[i].Selected, htmlAttributes: new { @class = "classChkBox" })
                                                </td>
                                                <td>@Html.DisplayFor(r => Model.ClassList[i].Text)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!--            <div id="jsGrid"></div>-->
                            </div>
                        </div>


                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="col-xs-12 col-sm-6 col-md-12">
                                <div class="form-group">
                                    <label for="">Messages</label>
                                    <div class="select">
                                        @Html.DropDownListFor(r => Model.SMSID, new SelectList(Model.TempleteSMSList, "Value", "Text"), "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%;", onchange = "TempleteSMSChange()" })
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                            <div class="col-xs-12 col-sm-6 col-md-12">
                                <div class="form-group">
                                    <label for="">Text Box</label>
                                    @*<textarea class="form-control" style="height:150px"></textarea>*@
                                    @Html.TextAreaFor(r => Model.SelectedFullSMSText, htmlAttributes: new { @class = "form-control", style = "height:150px;width:100%;", @readonly = true })
                                </div>
                            </div>
                            <div class="btnSec">
                                <button class="btn btn-success"  type="button" onclick="SearchForUndeliveredSMSDetails()">Search</button>
                            </div>


                        </div>

                        
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-12 ">
                            <div class="box box-warning">
                                <div class="box-header with-border">
                                    <h5 class="box-title">Undelivered SMS List</h5>
                                </div>
                                <div class="box-body">
                                    <div id="UnDeliveredSMSMainDiv"></div>
                                </div>
                            </div>
                            
                        </div>

                       
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3 ">
                            <div class="table-responsive searchtable table_ev_od">
                                <table border="0" class="table table-bordered table-responsive">
                                    <thead>
                                        <tr>
                                            <th>Select</th>
                                            <th>Member</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.CheckBoxFor(r => Model.IsSharewithCoordinator)
                                            </td>
                                            <td>Co-ordinator</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.CheckBoxFor(r => Model.IsSharewithClassTeacher)
                                            </td>
                                            <td>Class Teacher</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!--            <div id="jsGrid"></div>-->
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-3 ">
                            <div class="table-responsive searchtable table_ev_od">
                                <table border="0" class="table table-bordered table-responsive">
                                    <thead>
                                        <tr>
                                            <th>Select</th>
                                            <th>Email Member</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.CheckBoxFor(r => Model.IsEmailToCoordinator)
                                            </td>
                                            <td>Co-ordinator</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.CheckBoxFor(r => Model.IsEmailToClassTeacher)
                                            </td>
                                            <td>Class Teacher</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!--            <div id="jsGrid"></div>-->
                            </div>
                        </div>
                    </div>

                </div>

                <div class="box-footer">
                    <button id="btnCreateReport" disabled="disabled" onclick="SMS_DropMessages_CRUD()" class="btn btn-info" style="grid-row-align:end" type="button">Create Report</button>
                    <button id="btnPrintReport" disabled="disabled" class="btn btn-success" type="button" onclick="window.open('_UnDeliveredSMSDetails_ForDropMessegePage?IsForPrint=YES','Undelivered SMS Details','width=650,height=800').print()">Print Report</button>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .dropdown-menu > li > a {
        word-wrap: break-word;
        white-space: normal;
    }

    .dropdown-menu {
        max-width: 200px;
    }
</style>

<script>
    function TempleteSMSChange() {
        $('#SelectedFullSMSText').val('');
        $('#UnDeliveredSMSMainDiv').html('');
        $('#btnCreateReport').attr('disabled', true);
        $('#btnPrintReport').attr('disabled', true);
        if ($('#SMSID option:selected').text() != '--Select--') {
            $('#SelectedFullSMSText').val($('#SMSID option:selected').text());
        }
    }

    function SearchForUndeliveredSMSDetails() {
        var mobileNos = $('#MobileNos').val();
        var classIDs = "";
        $('#tblClassList > tbody > tr').each(function (i) {
            if ($('#ClassList_' + i + '__Selected').is(':checked')) {
                if (classIDs == "") {
                    classIDs += $('#ClassList_' + i + '__Value').val();
                } else {
                    classIDs += "," + $('#ClassList_' + i + '__Value').val();
                }
            }
        });

        if ($('#SMSID').val() == "" || $('#SelectedFullSMSText').val() == "" || $('#SelectedFullSMSText').val() == null) {
            OpenMessegeModal('No SMS selected ..!');
            return false;
        }

        if (mobileNos != null && mobileNos != "" && classIDs != "") {
            DisableFeildValues();
            $.ajax({
                type: "GET",
                beforeSend: function () {
                    spinnerShow();
                },
                url: "../SMSTemplete/_UnDeliveredSMSDetails_ForDropMessegePage",
                data: { ClassIds: classIDs, MobileNos: mobileNos },
                error: function (xhr, status, error) {
                    OpenMessegeModal($('#ErrorMsgOnJasonFailed').val());
                },
                success: function (response) {
                    $('#UnDeliveredSMSMainDiv').html(response);
                },
                complete: function () {
                    spinnerHide();
                }
            });
        } else {
            OpenMessegeModal('There is no mobile nos or class selected ..!');
        }
    }

    function DisableFeildValues() {
        $('.classChkBox').attr('disabled', true);
        $('#MobileNos').attr('disabled', true);
        $('#SMSID').attr('disabled', true);
    }


    function SMS_DropMessages_CRUD() {
        var erpNos = "";
        $('#tblUnDeliveredSMSDetailList > tbody > tr').each(function (i) {
            if (erpNos == "") {
                erpNos = $('#ERPNo_' + i).val();
            } else {
                erpNos += "," + $('#ERPNo_' + i).val();
            }
        });

        if (erpNos != "") {
            $.ajax({
                type: "POST",
                beforeSend: function () {
                    spinnerShow();
                },
                url: "../SMSTemplete/SMS_DropMessages_CRUD",
                data:
                {
                    ERPNos: erpNos, IsSharewithCoordinator: $('#IsSharewithCoordinator').is(':checked'),
                    IsSharewithClassTeacher: $('#IsSharewithClassTeacher').is(':checked'),
                    IsEmailToCoordinator: $('#IsEmailToCoordinator').is(':checked'),
                    IsEmailToClassTeacher: $('#IsEmailToClassTeacher').is(':checked'),
                    MessageId: $('#SMSID').val()
                },
                error: function (xhr, status, error) {
                    OpenMessegeModal($('#ErrorMsgOnJasonFailed').val());
                },
                success: function (response) {
                    OpenMessegeModal(response.Msg);
                },
                complete: function () {
                    spinnerHide();
                }
            });
        } else {
            OpenMessegeModal("No erp nos found ..!");
        }
    }
</script>