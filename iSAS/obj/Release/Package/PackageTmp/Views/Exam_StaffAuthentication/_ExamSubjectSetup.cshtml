@model ISas.Entities.TimeTable_Entities.StaffSubjectSetupModels

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="alert alert-info alert-dismissible" id="autoHideMsgDiv" style="z-index:1;position: absolute;min-width:98%;max-width:98%;display:none;">
            @*<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>*@
            <h4><i id="autoHideDivTitleIcon" class="icon fa fa-info"></i> <span id="autoHideDivTitle"> Alert! </span> </h4>
            <p id="autoHideDivMsg"> Info alert preview. This alert is dismissable.</p>
        </div>
    </div>
</div>


@using (Html.BeginForm("ExamSubjectSetup_CRUD", "Exam_StaffAuthentication", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(r => Model.StaffId)

    <div class="box box-primary">
        <div class="box-header with-border">
            <h5 class="box-title">Select Subject</h5>
            @*<h5 class="box-title pull-right">
                <button class="btn btn-info btn-xs" id="savebutton" type="button" onclick="DoAjaxPostAndMore(this)">Save</button>
            </h5>*@
        </div>
        <div class="row">
            <div class="col-md-1">
                &nbsp;
            </div>
            <div class="col-md-1">
                <h5><label for="">@Html.LabelFor(r => Model.ClassSecId)</label></h5>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="select">
                        @Html.DropDownListFor(m => m.ClassSecId, new SelectList(Model.ClassSecList, "Value", "Text"), "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%;", onchange = "getSubjectList('" + Model.StaffId + "')" })
                        @Html.ValidationMessageFor(r => Model.ClassSecId, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>
        </div>
        <div style="max-height:300px;overflow:auto;">
            <div id="subjectListMainDiv">
                @Html.Partial("_SubjectList")
            </div>
        </div>
        <div class="row" style="border-top:1px solid #808080;">
            <div class="col-md-12">
                <button style="margin-top:2%;margin-right:1%;" type="button" onclick="CommonAjaxPost(this); setTimeout(function () { $('#mainModalWithSave').modal('toggle'); }, 1500);" class="btn btn-success">SAVE</button>
                <button style="margin-top:2%;" type="button" class="btn btn-default" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        $('.select2').select2()
    })
</script>