<section class="content">
    @using (Html.BeginForm("HR_Payroll_SalaryRegister_CRUD", "HR_Payroll_SalaryRegister", FormMethod.Post, htmlAttributes: new { }))
    {
        <div class="box box-primary">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.PayBandID)</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.PayBandID, new SelectList(Model.PayBandList, "Value", "Text"), "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%;", onchange = "$('#Value').val(''); $('.table_row_HeadList').removeClass('selected');" })
                                @Html.ValidationMessageFor(r => Model.PayBandID, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.AttenMonthID)</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.AttenMonthID, new SelectList(Model.MonthList, "Value", "Text"), "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%;", onchange = "$('#Value').val(''); $('.table_row_HeadList').removeClass('selected');" })
                                @Html.ValidationMessageFor(r => Model.AttenMonthID, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <br />
                            <h5>
                                <button type="button" class="btn btn-success btnDefaultColor" onclick="GetPayBandEmployeeDetails()">
                                    <i class="fa fa-search"></i>
                                </button>
                            </h5>
                        </div>
                    </div>
                </div>
                @*<div class="row">
                        <div class="col-md-12">

                        </div>
                    </div>*@
            </div>
        </div>
        <div id="payBandEmpDetailsMainDiv"></div>
    }
</section>


