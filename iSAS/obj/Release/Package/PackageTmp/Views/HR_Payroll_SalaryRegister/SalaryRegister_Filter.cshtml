    function Fun_CheckToSelectAllEmp() {
        if ($('#chkBoxSelectAllEmp').is(':checked')) {
            $('.chkBoxSelectEmp').prop('checked', true);
        } else {
            $('.chkBoxSelectEmp').prop('checked', false);
        }
    }

    function GetPayBandEmployeeDetails() {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: '../HR_Payroll_SalaryRegister/_SalaryRegister_Details',
            data: { PayBandId: $('#PayBandID').val(), MonthDate: $('#AttenMonthID').val() },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                $('#payBandEmpDetailsMainDiv').html(response);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }

    function DoAjaxPostAndMore(btnClicked) {
        var selectedEmpCount = 0;
        $('#example1 > tbody > tr').each(function (i) {
            if ($('#PayBandEmpList_' + i + '__Selected').is(':checked')) {
                selectedEmpCount++;
            }
        });

        if (parseInt(selectedEmpCount) == 0) {
            OpenMessegeAutoHideDiv('No Employee is Selected..!', 'Info');
            return false;
        }

        $('#btnSave').attr('disabled', true);
        var $form = $(btnClicked).parents('form');
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: $form.attr('action'),
            data: $form.serialize(),
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                if (response.status == 'success') {
                    OpenMessegeAutoHideDiv(response.Msg, response.Color);
                    GetPayBandEmployeeDetails();
                }
                else {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnModelStateNotValid').val());
                    AddErrorAttributeCSS(response.ErrorList); //Available in CustomCommon.js
                    AddValidAttributeCSS(response.ValidKeyList); //Available in CustomCommon.js
                }
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>