@model ISas.Entities.FeesEntities.Fee_ConcessionPolicyModels

<section class="content-header">
    <h1>
        Add Concession Policy
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li><a href="#">Fee</a></li>
        <li><a href="@Url.Action("LandingPage", "Fee_ConcessionPolicy")">Concession Policy List</a></li>
        <li><a href="#">Add Concession Policy</a></li>
    </ol>
</section>

<section class="content">
    @using (Html.BeginForm("Fee_ConcessionPolicy_CRUD", "Fee_ConcessionPolicy", FormMethod.Post, htmlAttributes: new { }))
    {
        @Html.HiddenFor(r => Model.ConcId)

        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.ConcName)</label>
                            <div class="select">
                                @Html.TextBoxFor(m => m.ConcName, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(r => Model.ConcName, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.DefaultPer)</label>
                            <div class="select">
                                @Html.TextBoxFor(m => m.DefaultPer, htmlAttributes: new { @class = "form-control", onkeypress = "return NumericOnly(event)" })
                                @Html.ValidationMessageFor(r => Model.DefaultPer, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2">
                        <div class="checkbox">
                            <br /><label>
                                @Html.CheckBoxFor(r => Model.IsDefault, htmlAttributes: new { @class = "" })
                                @Html.LabelFor(r => Model.IsDefault)
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2">
                        <div class="checkbox">
                            <br /> <label>
                                @Html.CheckBoxFor(r => Model.WorkProcess, htmlAttributes: new { @class = "" })
                                @Html.LabelFor(r => Model.WorkProcess)
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.WorkProcessBy)</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.WorkProcessBy, new SelectList(Model.UserRoleList, "Value", "Text"), "--Select--", htmlAttributes: new { @class = "form-control select2", style = "width:100%;" })
                                @Html.ValidationMessageFor(r => Model.WorkProcessBy, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="box-footer">
                <button class="btn btn-info" id="savebutton" type="button" onclick="DoAjaxPostAndMore(this)">Save</button>
                <button class="btn btn-default" type="button" onclick="window.location.reload()">Reset</button>
            </div>
        </div>

    }
</section>
<script>
    function DoAjaxPostAndMore(btnClicked) {
        var $form = $(btnClicked).parents('form');
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: $form.attr('action'),
            data: $form.serialize(),
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                if (response.status == 'success') {
                    OpenMessegeAutoHideDiv(response.Msg, 'Success');
                    setTimeout(function () { window.location = "../Fee_ConcessionPolicy/LandingPage"; }, 3000);
                }
                else {
                    AddErrorAttributeCSS(response.ErrorList); //Available in CustomCommon.js
                    AddValidAttributeCSS(response.ValidKeyList); //Available in CustomCommon.js
                }
            },
            complete: function () {
                spinnerHide();
            }
        });
        return false;
    }
</script>

