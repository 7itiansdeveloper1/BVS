@using ISas.Web.Models;
@model List<ISas.Entities.FeesEntities.Fee_ConcessionPolicyModels>

<section class="content-header">
    <h1>
        Concession Policy List
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li><a href="#">Fee</a></li>
        <li><a href="#">Concession Policy List</a></li>
    </ol>
</section>
<section class="content">
    <!-- /.box -->
    <div class="box box-primary">
        <!-- /.box-header -->
        <div class="box-header with-border">
            <h5 class="box-title">Concession Policy List</h5>
            <h5 class="box-title pull-right">@Html.ActionLink("+ Add New Policy", "New", "Fee_ConcessionPolicy", htmlAttributes: new { @class = "btn btn-primary btn-xs" })</h5>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S. No</th>
                        <th>Policy Name</th>
                        <th>Percentage</th>
                        <th>Default</th>
                        <th>Work Process</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        int count = 1;
                        for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(r => count)</td>
                                <td>
                                    @Html.DisplayFor(r => Model[i].ConcName)
                                </td>
                                <td>@Html.DisplayFor(r => Model[i].DefaultPer)</td>
                                <td>@Html.DisplayFor(r => Model[i].IsDefault)</td>
                                <td>@Html.DisplayFor(r => Model[i].WorkProcess)</td>
                                <td class="text-center">
                                    @if (Model[i].IsDeleteable)
                                    {
                                        <button title="Delete Strecture" class="btn btn-danger btn-xs" type="button" onclick="DeleteConcPolicyConfirm('@Model[i].ConcId')">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button title="Delete Strecture" class="btn btn-danger btn-xs" type="button" disabled="disabled">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    }

                                    @if (Model[i].IsEditable)
                                    {
                                        @Html.EncodedActionLink(" ", "Updation", "Fee_ConcessionPolicy", new { ConcId = Model[i].ConcId }, htmlAttributes: new { @class = "btn btn-info btn-xs fa fa-edit", title = "Edit Concession Policy" })
                                    }
                                    else
                                    {
                                        @Html.EncodedActionLink(" ", "Updation", "Fee_ConcessionPolicy", new { }, htmlAttributes: new { @class = "btn btn-info btn-xs fa fa-edit", disabled = true, title = "Edit Concession Policy" })
                                    }
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>



<script>
    $(function () {
        $('#example1').DataTable()
    });

    function DeleteConcPolicyConfirm(ConcId) {
        AsyncConfirmYesNo("Confirmation", "Are you sure to delete this policy?", MyYesFunction, MyNoFunction, ConcId);
    }

    function MyYesFunction(ConcId) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Fee_ConcessionPolicy/Fee_ConcessionPolicy_Delete",
            data: { ConcId: ConcId },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg);
                setTimeout(function () { window.location = "../Fee_ConcessionPolicy/LandingPage"; }, 3000);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function MyNoFunction() {
        //alert('No Calling');
    }
</script>