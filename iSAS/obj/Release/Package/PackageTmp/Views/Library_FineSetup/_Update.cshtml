@model ISas.Entities.LibraryEntities.Library_FineSetupModels

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="alert alert-info alert-dismissible" id="autoHideMsgDiv" style="z-index:1;position: absolute;min-width:98%;max-width:98%;display:none;">
            <h4><i id="autoHideDivTitleIcon" class="icon fa fa-info"></i> <span id="autoHideDivTitle"> Alert! </span> </h4>
            <p id="autoHideDivMsg"> Info alert preview. This alert is dismissable.</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("Library_FineSetup_CRUD", "Library_FineSetup", FormMethod.Post, htmlAttributes: new { }))
{

    @Html.HiddenFor(r => Model.LibraryId)
    @Html.HiddenFor(r => Model.LibraryName)
    @Html.HiddenFor(r => Model.FineId)

    <div class="box box-widget">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="form-group">
                        <label for="">@Html.LabelFor(r => Model.FineRateForStaff)<i class="mandateLbl">*</i></label>
                        <div class="select">
                            @Html.TextBoxFor(m => m.FineRateForStaff, htmlAttributes: new { @class = "form-control", type = "number", autocomplete = "off", onkeypress = "return NumericOnly(event)" })
                            @Html.ValidationMessageFor(r => Model.FineRateForStaff, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="form-group">
                        <label for="">@Html.LabelFor(r => Model.FineRateForStudent)<i class="mandateLbl">*</i></label>
                        <div class="select">
                            @Html.TextBoxFor(m => m.FineRateForStudent, htmlAttributes: new { @class = "form-control", type = "number", autocomplete = "off", onkeypress = "return NumericOnly(event)" })
                            @Html.ValidationMessageFor(r => Model.FineRateForStudent, null, htmlAttributes: new { style = "color:red;" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label for="" class="checkbox">
                        <label>
                            @Html.CheckBoxFor(r => Model.IsActive, htmlAttributes: new { }) Is Active
                        </label>
                    </label>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-success" id="savebutton" type="button" onclick="CommonAjaxPost(this); setTimeout(function () { $('#mainModalWithSave').modal('toggle'); GetFineSetupList(); }, 1500); ">SAVE</button>
            @*<button class="btn btn-default" type="button" onclick="window.location.reload()">RESET</button>*@
        </div>
    </div>
}
