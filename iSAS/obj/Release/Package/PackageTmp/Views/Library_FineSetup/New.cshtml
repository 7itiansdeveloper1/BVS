@model ISas.Entities.LibraryEntities.Library_FineSetupModels

<section class="content-header">
    <h1>Fine Setup For <small>@Html.DisplayFor(r => Model.LibraryName)</small></h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li><a href="@Url.Action("New", "Library_Setup")">Library</a></li>
        <li class="active">Fine Setup</li>
    </ol>
</section>

<section class="content">
    @using (Html.BeginForm("Library_FineSetup_CRUD", "Library_FineSetup", FormMethod.Post, htmlAttributes: new { }))
    {
        @Html.HiddenFor(r => Model.LibraryId)
        @Html.HiddenFor(r => Model.LibraryName)
        @Html.HiddenFor(r => Model.FineId)

        <div class="row">
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label for="">@Html.LabelFor(r => Model.FineRateForStaff)<i class="mandateLbl">*</i></label>
                                    <div class="select">
                                        @Html.TextBoxFor(m => m.FineRateForStaff, htmlAttributes: new { @class = "form-control", type = "number", autocomplete = "off", onkeypress = "return NumericOnly(event)" })
                                        @Html.ValidationMessageFor(r => Model.FineRateForStaff, null, htmlAttributes: new { style = "color:red;" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label for="">@Html.LabelFor(r => Model.FineRateForStudent)<i class="mandateLbl">*</i></label>
                                    <div class="select">
                                        @Html.TextBoxFor(m => m.FineRateForStudent, htmlAttributes: new { @class = "form-control", type = "number", autocomplete = "off", onkeypress = "return NumericOnly(event)" })
                                        @Html.ValidationMessageFor(r => Model.FineRateForStudent, null, htmlAttributes: new { style = "color:red;" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label for="" class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(r => Model.IsActive, htmlAttributes: new { }) Is Active
                                    </label>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-success" id="savebutton" type="button" onclick="CommonAjaxPost(this); setTimeout(function () { $('#FineRateForStaff').val(0); $('#FineRateForStudent').val(0); GetFineSetupList();}, 1500);">SAVE</button>
                        <button class="btn btn-default" type="button" onclick="window.location.reload()">RESET</button>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h5 class="box-title">Fine Setup List</h5>
                    </div>
                    <div class="box-body">
                        <div id="remarksListMainDiv">
                            @{ Html.RenderAction("_LandingPage", "Library_FineSetup", new { LibId = Model.LibraryId });}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

<script>
    function GetFineSetupList() {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: '../Library_FineSetup/_LandingPage',
            data: { LibId : '@Model.LibraryId'},
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                $('#remarksListMainDiv').html(response);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }

    function EditFineSetup(FineId) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: '../Library_FineSetup/_Update',
            data: { LibId: '@Model.LibraryId', FineId: FineId  },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                OpenModalWithSave(response, 'Edit Fine');
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>