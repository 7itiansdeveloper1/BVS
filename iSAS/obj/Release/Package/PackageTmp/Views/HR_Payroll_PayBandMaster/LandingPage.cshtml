@using ISas.Web.Models;
@model List<ISas.Entities.HR_Payroll_Entities.HR_Payroll_PayBandMasterModels>

<!-- /.box -->
<div class="box box-primary">
    <!-- /.box-header -->
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Pay Band List</h5>
        </div>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped dt-responsive nowrap">
            <thead>
                <tr>
                    <th>S. No</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Print Order</th>
                    <th>Actve</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Html.DisplayFor(r => count)</td>
                            <td>@Html.DisplayFor(r => Model[i].PayBandName)</td>
                            <td>@Html.DisplayFor(r => Model[i].Discrption)</td>
                            <td>@Html.DisplayFor(r => Model[i].PrintOrder)</td>
                            <td>@Html.DisplayFor(r => Model[i].Active)</td>
                            <td class="text-center">
                                @if (Model[i].IsDeletable)
                                {
                                    <a href="#" onclick="DeletePayBandConfirm('@Model[i].PayBandId')" title="Delete Pay Band" class="fa fa-trash btnDefaultColor"></a>
                                }
                                else
                                {
                                    <span title="Delete Pay Band" class="fa fa-trash btnDefaultColorFaded"></span>
                                }

                                @Html.EncodedActionLink(" ", "Updation", "HR_Payroll_PayBandMaster", new { PayBandID = Model[i].PayBandId }, htmlAttributes: new { @class = "fa fa-edit btnDefaultColor", title = "Edit Pay Band" })

                                @Html.EncodedActionLink(" ", "LandingPage", "HR_Payroll_StaffEnrollment", new { PayBandID = Model[i].PayBandId, PayBandName = Model[i].PayBandName }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "Staff Enrollment", style = "margin:3%;" })

                                @Html.EncodedActionLink(" ", "New", "HR_Payroll_CTC_Setup", new { PayBandID = Model[i].PayBandId, PayBandName = Model[i].PayBandName }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "CTS Setup" })

                                @Html.EncodedActionLink(" ", "LandingPage", "HR_Payroll_FinalCTS", new { PayBandID = Model[i].PayBandId, PayBandName = Model[i].PayBandName }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "Final CTS", style = "margin-left:3%;" })
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<script>
    $(function () {
        $('#example1').DataTable()
    });

    function DeleteSalaryHeadConfirm(PayBandID) {
        AsyncConfirmYesNo("Confirmation", "Are you sure to delete this Pay Band..?", MyYesFunction, MyNoFunction, PayBandID);
    }

    function MyYesFunction(PayBandID) {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../HR_Payroll_PayBandMaster/HR_Payroll_PayBandMaster_Delete",
            data: { PayBandID: PayBandID },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                OpenMessegeAutoHideDiv(result.Msg, result.Color );
                setTimeout(function () { window.location = "../HR_Payroll_PayBandMaster/New"; }, $('#hddnReloadTime').val());
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function MyNoFunction() {
        //alert('No Calling');
    }
</script>