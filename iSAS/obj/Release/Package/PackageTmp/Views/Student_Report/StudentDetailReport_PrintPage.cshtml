@model ISas.Entities.Student_ReportModel
@{
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
}
@if (Model != null)
{
    <table class="table">
        <tr>
            <td style="width:85px;">
                <img src="~/Images/System/loginBgleft.jpg" width="80" height="80" />
            </td>
            <td>
                <h3>
                    BAL VIKAS SCHOOL
                    <br />24 GTB Colony, Model Town, Panipat
                </h3>
            </td>
            <td>
                <small class="pull-right">Date: @DateTime.Now.ToShortDateString().Replace("-", "/")</small>
            </td>
        </tr>
        <tr>
            <td colspan="3">Report Name : @Html.DisplayFor(r=> Model.SelectedReportName)  Report for Classes : @Html.DisplayFor(r=> Model.SelectedClassNames)</td>
        </tr>
    </table>
    <hr />
    <table class="table table-striped" id="tblStudentDetail" style="font-size:9px;">
        <thead>
            <tr>
                @for (int i = 0; i < Model.HeaderNameList.Count; i++)
                {
                    <th style="padding-left:5px;padding-right:5px;">@Html.DisplayFor(r => Model.HeaderNameList[i])</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ValueList.Count; i++)
            {
                <tr>
                    @for (int j = 0; j < Model.ValueList[i].Count; j++)
                    {
                        <td style="padding-left:5px;padding-right:5px;">@Html.DisplayFor(r => Model.ValueList[i][j])</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
