@using ISas.Web.Models;
@model List<ISas.Entities.Academic.Academic_HolidayMasterModel>

@{
    int rowlength = 0;
    if (Model != null && Model.Count > 0)
    {
        rowlength = Model.Count;
    }
}
<!-- /.box -->
<div class="box box-success">
    <!-- /.box-header -->
    <div class="box-header with-border">
        <div class="box-title">
            <h5 class="box-title">Holiday List</h5>
        </div>
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>S. No</th>
                    <th>Holiday Name</th>
                    <th>Is Active</th>
                    <th>Is Holiday For Student</th>
                    <th>Is Holiday For Staff</th>
                    <th>Holiday Count</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Html.DisplayFor(r => count)</td>
                            <td>
                                <span style="display:none;"> @Html.DisplayFor(r => Model[i].HolidayName)<i class="mandateLbl">*</i></span>
                                @Html.HiddenFor(r => Model[i].HolidayId, htmlAttributes: new { id = "HolidayId_" + @i })
                                @Html.TextBoxFor(r => Model[i].HolidayName, htmlAttributes: new { @class = "form-control editableFeild_" + @i + "", id = "HolidayName_" + @i, @readonly = true })
                            </td>
                            <td>
                                @if (Model[i].IsActive)
                                {
                                    <label class="switch">
                                        <input class="editableFeild_Chk_@i" disabled="disabled" id="IsActive_@i" checked="checked" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                }
                                else
                                {
                                    <label class="switch">
                                        <input class="editableFeild_Chk_@i" disabled="disabled" id="IsActive_@i" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                @if (Model[i].HolidayForStudent)
                                {
                                    <label class="switch">
                                        <input class="editableFeild_Chk_@i" disabled="disabled" id="HolidayForStudent_@i" checked="checked" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                }
                                else
                                {
                                    <label class="switch">
                                        <input class="editableFeild_Chk_@i" disabled="disabled" id="HolidayForStudent_@i" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                @if (Model[i].HolidayForStaff)
                                {
                                    <label class="switch">
                                        <input class="editableFeild_Chk_@i" disabled="disabled" id="HolidayForStaff_@i" checked="checked" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                }
                                else
                                {
                                    <label class="switch">
                                        <input class="editableFeild_Chk_@i" disabled="disabled" id="HolidayForStaff_@i" type="checkbox">
                                        <span class="slider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                @Html.TextBoxFor(r => Model[i].HolidayCount, htmlAttributes: new { @class = "form-control", @readonly = true })
                            </td>
                            <td class="text-center" style="min-width:100px;">
                                @if (Model[i].IsDeleteable)
                                {
                                    <a href="#" onclick="DeleteHolidayConfirm('@Model[i].HolidayId')" style="cursor:pointer;" title="Delete Holiday" class="fa fa-trash btnDefaultColor"></a>
                                }
                                else
                                {
                                    <a href="#" style="cursor:not-allowed;" title="Delete Holiday" class="fa fa-trash btnDefaultColor"></a>
                                }
                                <a href="#" onclick="EnableEditableRow('@i')" id="btnEdit_@i" style="" title="Edit Holiday" class="fa fa-edit btnDefaultColor"></a>
                                <a href="#" onclick="UpdateHolidayMaster('@i')" id="btnSave_@i" style="display:none;" title="Save Holiday" class="fa fa-check btnDefaultColor"></a>
                                @Html.EncodedActionLink(" ", "New", "Academic_HolidayDeclaration", new { HolidayId = Model[i].HolidayId }, htmlAttributes: new { @class = "fa fa-gear btnDefaultColor", title = "Holiday Declaration" })
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<script>
    $(function () {
        $('#example1').DataTable();
        $('#hddnRowLenght').val('@rowlength');
    });
</script>