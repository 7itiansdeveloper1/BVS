    </div>*@
    <div class="box-body">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab" aria-expanded="true">Not Registered @Html.DisplayFor(r => Model.UserType)</a></li>
                <li class=""><a href="#tab2" data-toggle="tab" aria-expanded="false">Registered @Html.DisplayFor(r => Model.UserType)</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                    <table id="example2" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayFor(r => Model.UserType) Name </th>
                                <th>User Name</th>
                                <th>Recovery Email</th>
                                <th>Mobile No</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Not_RegisteredStaffOrStudent.Count(); i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(r => Model.Not_RegisteredStaffOrStudent[i].StaffOrStudent)</td>
                                    <td>@Html.DisplayFor(r => Model.Not_RegisteredStaffOrStudent[i].UserName)</td>
                                    <td>@Html.DisplayFor(r => Model.Not_RegisteredStaffOrStudent[i].UserRecoveryEmail)</td>
                                    <td>@Html.DisplayFor(r => Model.Not_RegisteredStaffOrStudent[i].UserMobileNo)</td>
                                    <td>
                                        <a href="#" title="Add User" onclick="$('#Mode').val('SAVE');$('#SelectedUserOrStaffID').val('@Model.Not_RegisteredStaffOrStudent[i].StaffOrStudentId');DoAjaxPostAndMore(this);" class="fa fa-plus-square  btnDefaultColor"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="tab2">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayFor(r => Model.UserType) Name </th>
                                <th>User Name</th>
                                <th>Recovery Email</th>
                                <th>Mobile No</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.RegisteredStaffOrStudent.Count(); i++)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(r => Model.RegisteredStaffOrStudent[i].StaffOrStudent)</td>
                                    <td>@Html.DisplayFor(r => Model.RegisteredStaffOrStudent[i].UserName)</td>
                                    <td>@Html.DisplayFor(r => Model.RegisteredStaffOrStudent[i].UserRecoveryEmail)</td>
                                    <td>@Html.DisplayFor(r => Model.RegisteredStaffOrStudent[i].UserMobileNo)</td>
                                    <td>
                                        <a href="#" title="Reset Password" onclick="$('#Mode').val('RESETPWD');$('#SelectedUserOrStaffID').val('@Model.RegisteredStaffOrStudent[i].StaffOrStudentId');ResetPasswordConfirm(this);" class="fa fa-gear btnDefaultColor"></a>

                                        @Html.EncodedActionLink(" ", "New", "UserPermission", new { Name = Model.RegisteredStaffOrStudent[i].StaffOrStudent, RefId = Model.RegisteredStaffOrStudent[i].StaffOrStudentId, UserType = Model.UserType }, htmlAttributes: new { @class = "fa fa-gear  btnDefaultColor", title = "User Permission" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#example2').DataTable();
        $('#example1').DataTable();
        var roleList = '<option value="">--Select--</option>';
        $.ajax({
            type: "POST",
            url: '../UserCreation/GetUserRoleList',
            data: { UserType: '@Model.UserType'},
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                for (var i = 0; i < result.length; i++) {
                    roleList += '<option value=' + result[i].Value + '>' + result[i].Text + '</option>';
                }
                $('#RoleID').html(roleList);
            },
        });
    });
</script>