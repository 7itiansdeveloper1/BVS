<script>
    function getFeeDetailReport() {
        var classSecIds = $('#ClassSectionIds').val();  //$("#hddnClassSectionId").val()
        if (classSecIds == null || classSecIds == "") {
        } else {
            classSecIds = classSecIds.toString();
        }

        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Fee_Report/_Fee_ReportDetail",
            data: {
                FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val(),
                ReportName: $('#ReportName').val(), ClassSectionIds: classSecIds,
                FeeCategory: $('#FeeCategory').val(), FeeType: $("input[name='FeeType']:checked").val(),
                FeeMode: $('#FeeMode').val(), Print: 'NO'
            },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                $('#studentReportMainDiv').html(result);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>