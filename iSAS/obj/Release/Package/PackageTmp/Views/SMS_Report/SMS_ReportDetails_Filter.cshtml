@model ISas.Entities.SMSManagement.SMS_ReportDetailFilterModel

<script src="~/bower_components/datatables.net/js/dataTables.buttons.min.js"></script>
<script src="~/bower_components/datatables.net/js/buttons.flash.min.js"></script>
<script src="~/bower_components/datatables.net/js/jszip.min.js"></script>
<script src="~/bower_components/datatables.net/js/buttons.print.min.js"></script>
<script src="~/bower_components/datatables.net/js/pdfmake.min.js"></script>
<script src="~/bower_components/datatables.net/js/vfs_fonts.js"></script>
<script src="~/bower_components/datatables.net/js/buttons.html5.min.js"></script>
<script src="~/bower_components/datatables.net/js/buttons.colVis.min.js"></script>
<script src="~/bower_components/datatables.net/js/dataTables.select.min.js"></script>
<link rel="stylesheet" href="~/bower_components/datatables.net/css/buttons.dataTables.min.css">

<section class="content-header">
    <h1>SMS Detail Reports</h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>SMS</li>
        <li><a href="@Url.Action("SMS_ReportMain_Filter", "SMS_Report")">SMS Reports</a></li>
        <li class="active">Detail Reports</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    @Html.HiddenFor(r => Model.GID)
                    <div class="form-group">
                        <div class="radio">
                            <label>@Html.RadioButtonFor(r => Model.DStatus, "ALL", htmlAttributes: new { }) ALL</label>
                            <label>@Html.RadioButtonFor(r => Model.DStatus, "UNDEL", htmlAttributes: new { }) Un-Delivered</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <br />
                        <div class="select">
                            <h5>
                                <input type="button" class="btn btn-info pull-right btn-xs" style="margin-left:3%;" onclick="ReSendSMS()" id="btnResend" value="RESEND" disabled="disabled" />
                                <input type="button" class="btn btn-success pull-right btn-xs" onclick="getSMSDetailReport()" value="FILTER" />
                                
                            </h5>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div id="mainReportDiv" style="overflow-y:scroll">
                        @{ Html.RenderAction("_SMS_ReportDetails", "SMS_Report", new { GID = Model.GID, DStatus = Model.DStatus }); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
     
    function getSMSDetailReport() {
        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../SMS_Report/_SMS_ReportDetails",
            data: { GID: $('#GID').val(), DStatus: $('input[name=DStatus]:checked').val() },
            error: function (xhr, status, error) {
                OpenMessegeModal($('#ErrorMsgOnJasonFailed').val());
            },
            success: function (result) {
                $('#mainReportDiv').html(result);
                EnableDisableResendButton();
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
    function ReSendSMS(btnClicked) {
  
        var $form = $(btnClicked).parents('form');
        $.ajax({
            type: "POST",
            beforeSend: function () {
                spinnerShow();
            },
            url: '../SMS_Report/ReSendSMS',
            data: $('#Mahesh').serialize(),
            error: function (xhr, status, error) {
                console.log(xhr);
                console.log(status);
                console.log(error);
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (response) {
                if (response.status == 'success') {
                    OpenMessegeAutoHideDiv(response.Msg, response.Color);
                } else {
                    AddErrorAttributeCSS(response.ErrorList); //Available in CustomCommon.js
                    AddValidAttributeCSS(response.ValidKeyList); //Available in CustomCommon.js
                }
            },
            complete: function () {
                spinnerHide();
            }
        });
        return false;
    }
    function EnableDisableResendButton() {

        var selectedOption = $('input[name=DStatus]:checked').val();
        if (selectedOption == "UNDEL") {
            $('#btnResend').attr('disabled', false);
        } else if (selectedOption == "ALL") {
            $('#btnResend').attr('disabled', true);
        }
    }
  
</script>

