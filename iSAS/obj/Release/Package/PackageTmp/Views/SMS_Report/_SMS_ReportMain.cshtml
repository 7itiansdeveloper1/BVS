@model List<ISas.Entities.SMSManagement.SMS_ReportMainModel>
@using ISas.Web.Models;
@{
    string reportName = "SMS Send Report";
}
<div style="display:none;">
    @{ Html.RenderAction("_ReportHeader", "Common", new { tempReportName = @reportName });}
</div>
<table id="example1" class="table table-responsive table-bordered table-condensed" style="width:100%">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Send Time</th>
            <th>Message</th>
            <th>Count</th>
            <th>Classes</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(r => Model[i].SNo)</td>
                    <td>@Html.DisplayFor(r => Model[i].SendTime)</td>
                    <td>@Html.DisplayFor(r => Model[i].MessegeSend)</td>
                    <td class="text-center"><i class="badge"><a href="#" style="color:white;" title="Delivery Status Summary, Click Here.." onclick="getSMSDeliveryCount('@Model[i].GID')">@Html.DisplayFor(r => Model[i].Count)</a></i> </td>
                    <td>@Html.DisplayFor(r => Model[i].Classes)</td>
                    <td>
                        @Html.EncodedActionLink("View", "SMS_ReportDetails_Filter", "SMS_Report", new { GID = Model[i].GID }, htmlAttributes: new { @class = "btn btn-success btn-xs", title = "View Detail Report" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $("#example1 tr").click(function (evt) {
        if (evt.ctrlKey) {
            $(this).toggleClass("selected");
        } else {
            var selected = $(this).hasClass("selected");
            $("#example1 tr").removeClass("selected");
            if (!selected)
                $(this).addClass("selected");
        }
    });

    $(document).ready(function () {
        $('#example1').DataTable({
            "pageLength": 50,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'Copy',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'Excel',
                    title: '@reportName',
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (xlsx) {
                        console.log(xlsx);

                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'Print',
                    title: "",
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (win) {
                        $(win.document.body)
                            //.css('font-size', '10pt')
                            .prepend($('#reportHeaderDiv').html()); //'<img src="http://localhost:60254/Images/System/balVikasLog.jpg" style="" />'
                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                },
                'colvis'
            ],
            select: true
        });
    });
</script>

