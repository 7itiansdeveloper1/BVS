@model  ISas.Entities.FeesEntities.Fee_ReportHtmlModel
@{
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
}
<link href="~/bower_components/pageSize/PageSize.css" rel="stylesheet" />
<page size="A4" layout="landscape" style="height:90%;">
    <div class="text-center">
        <table style="height:100%;">
            <tr>
                <td>
                    <table class="" style="border:1px solid black;font-size:16px;height:100%;">
                        <tr>
                            <td style="padding:2%;"> <img src="~/@Model.ReportHeader.LogoURL" height="100" width="100" /></td>
                            <td colspan="3" class="text-center" style="font-size:21px;padding-right:2%;">
                                <strong>
                                    @Html.DisplayFor(r => Model.ReportHeader.Header1)
                                    <br /><span style="font-size:16px;">Email : @Html.DisplayFor(r => Model.ReportHeader.Header3)</span>
                                    <br /><span style="font-size:18px;">@Html.DisplayFor(r => Model.ReportHeader.ReportName)</span>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <table style="width:100%;">
                                    <tr>
                                        <td style="padding-left:2%;"><strong>Receipt No. : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.ReceiptNo) <small>(@Html.DisplayFor(r => Model.ReceiptStatus))</small> </strong></td>
                                        <td class="text-right" style="padding-right:2%;"><strong>Date : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.ReceiptDate)</strong></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <table style="width:100%;">
                                    <tr>
                                        <td colspan="2" style="padding-left:2%;"><strong>Adm No. : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.AdmNo)</strong></td>
                                        <td colspan="2" class="text-right" style="padding-right:2%;"><strong>Class : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.Class)</strong></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4" style="padding-left:2%;"><strong>Student's Name : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.Student)</strong></td>
                        </tr>
                        <tr>
                            <td colspan="4" style="padding-left:2%;"><strong>Father's Name : &nbsp;&nbsp; @Html.DisplayFor(r => Model.StudentInfo.Father)</strong></td>
                        </tr>
                        <tr><td class="text-center" colspan="4"> <strong>Fee of the month @Html.DisplayFor(r => Model.Duration)</strong> </td></tr>
                        <tr>
                            <td colspan="4" style="padding-left:1%;padding-right:1%;">
                                <table class="" style="width:100%;" border="1">
                                    <thead>
                                        <tr>
                                            <th style="padding-left:2%;">DURATION</th>
                                            <th style="width:60%;padding-left:2%;">PARTICULARS</th>
                                            <th class="text-right" style="padding-right:2%;">DUE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.HeadDetails.Count; i++)
                                        {
                                            <tr>
                                                <td style="padding-left:2%;">@Html.DisplayFor(r => Model.HeadDetails[i].Duration)</td>
                                                <td style="padding-left:2%;">@Html.DisplayFor(r => Model.HeadDetails[i].HeadName)</td>
                                                <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.HeadDetails[i].Due)</td>
                                            </tr>
                                        }
                                        <tr>
                                            <td colspan="3" style="padding-left:2%;">
                                                <table style="width:100%;font-weight:600;">
                                                    <tr>
                                                        <td class="text-right" style="width:80%;">Total Due Amount : </td>
                                                        <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.TotalDue) </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right" style="width:80%;">Exempted  : </td>
                                                        <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.Exempted) </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right" style="width:80%;">Amount to Pay  : </td>
                                                        <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.AmounttoPay) </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right" style="width:80%;">Total Paid Amount : </td>
                                                        <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.TotalPaid) </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right" style="width:80%;">Balance : </td>
                                                        <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.Balance) </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-right" style="width:80%;">Excess Amount : </td>
                                                        <td class="text-right" style="padding-right:2%;">@Html.DisplayFor(r => Model.Excess) </td>
                                                    </tr>
                                                </table>
                                            </td>

                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>

                        <tr style="border-top:1px solid black;">
                            <td colspan="4"></td>
                        </tr>
                        <tr>
                            <td colspan="4" style="height:100px;vertical-align:top;text-align:left;padding-left:2%;">
                                <strong>
                                    Paid By : @Html.DisplayFor(r => Model.StudentInfo.PaymentMode)
                                    <br />
                                    In Words : @Html.DisplayFor(r => Model.StudentInfo.AmountInWord)
                                </strong>
                            </td>
                        </tr>
                        <tr style="border-top:1px solid black;">
                            <td colspan="4"></td>
                        </tr>
                        <tr>
                            <td colspan="2" style="height:80px;vertical-align:bottom;text-align:left;padding-left:2%;">
                                <strong>Cashier Sign.</strong>
                            </td>
                            <td colspan="2" style="height:80px;vertical-align:bottom;text-align:right;padding-right:2%;">
