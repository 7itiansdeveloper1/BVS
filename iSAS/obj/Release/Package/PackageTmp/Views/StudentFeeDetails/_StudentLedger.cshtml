@model List<ISas.Entities.DashboardEntities.StudentFeeStatusModel>

<div>
    <table class="table table-bordered table-responsive table-hover" id="tblLedgerDetails">
        <thead>
            <tr>
                <th>Installment</th>
                <th>Receipt No</th>
                <th>Amount</th>
                <th>Recived Amount</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(r => r.Status == "Paid"))
            {
                <tr>
                    <td>@Html.DisplayFor(r => item.Duration)</td>
                    <td>@Html.DisplayFor(r => item.ReceiptNo)</td>
                    <td>@Html.DisplayFor(r => item.Due)</td>
                    <td>@Html.DisplayFor(r => item.Paid)</td>
                    <td>@Html.DisplayFor(r => item.BalanceAmount)</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Download Ledger", "", "", htmlAttributes: new { onclick = "return false;", style = "padding-left:2%;" })
</div>

<script>
    $(document).ready(function () {
        $('#tblLedgerDetails').DataTable();
    });
</script>