@model List<ISas.Entities.DashboardEntities.StudentFeeStatusModel>
@using ISas.Web.Models;
<div class="">
    <table id="tblReceiptDetails" class="table table-hover table-bordered table-responsive table-condensed">
        <thead>
            <tr>
                <th>S. No</th>
                <th>Receipt No</th>
                <th>Receipt Date</th>
                <th>Duration</th>
                <th>Due Amt.</th>
                <th>Paid Amt.</th>
                <th>Mode</th>
                <th>Balance Amt.</th>
                <th>Excess Amt.</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int count = 1;
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Html.DisplayFor(r => count)</td>
                        <td>@Html.DisplayFor(r => Model[i].ReceiptNo)</td>
                        <td>@Html.DisplayFor(r => Model[i].ReceiptDate)</td>
                        <td>@Html.DisplayFor(r => Model[i].Duration)</td>
                        <td>@Html.DisplayFor(r => Model[i].Due)</td>
                        <td>@Html.DisplayFor(r => Model[i].Paid)</td>
                        <td>@Html.DisplayFor(r => Model[i].Mode)</td>
                        <td>@Html.DisplayFor(r => Model[i].Balance)</td>
                        <td>@Html.DisplayFor(r => Model[i].Excess)</td>
                        <td>@Html.DisplayFor(r => Model[i].Status)</td>
                        <td style="min-width:70px;">
                            @if (@Model[i].Status == "Cancelled")
                            {
                                <a title="Cancel Receipt" class="fa fa-remove btnDefaultColorFaded"></a>
                            }
                            else
                            {
                                <a onclick="CancelOrDeleteReceiptConfirm('@Model[i].ReceiptNo', 'CANCEL')" title="Cancel Receipt" class="fa fa-remove btnDefaultColor"></a>
                            }

                            <i class=""></i>

                            @Html.EncodedActionLink(" ", "GetFeeDocument_View_HtmlReport", "StudentFeeDetails", new { TransRefNo = Model[i].ReceiptNo, Mode = "RECEIPT", erpno = Model[i].ERPNo, PrintType = "YES" }, htmlAttributes: new { @class = "fa fa-print btnDefaultColor", target = "_blank" })
                            @Html.EncodedActionLink(" ", "GetFeeDocument_View_HtmlReport", "StudentFeeDetails", new { TransRefNo = Model[i].ReceiptNo, Mode = "RECEIPT", erpno = Model[i].ERPNo }, htmlAttributes: new { @class = "fa fa-eye btnDefaultColor", target = "_blank" })
                        </td>
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#tblReceiptDetails').DataTable();
    });
</script>
