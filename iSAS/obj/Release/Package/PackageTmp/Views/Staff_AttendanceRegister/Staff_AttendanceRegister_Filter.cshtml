@model ISas.Entities.StaffEntities.Staff_AttendanceRegisterModels

<section class="content-header">
    <h1>Attendance Register</h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>Staff Attendance</li>
        <li class="active">Attendance Register</li>
    </ol>
</section>
<section class="content">
    @using (Html.BeginForm("Staff_AttendanceRegister_CRUD", "Staff_AttendanceRegister", FormMethod.Post, htmlAttributes: new { }))
    {
        <div class="box box-success">
            <div class="box-header with-border">
                <h5 class="box-title">Filter Departments</h5>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-2">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.AttenDate)</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.TextBoxFor(m => m.AttenDate, htmlAttributes: new { @class = "form-control pull-right date", onchange = "getStaffDetailReport()" })
                                @Html.ValidationMessageFor(r => Model.AttenDate, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">@Html.LabelFor(r => Model.DepartmentIds)</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.DepartmentIds, new SelectList(Model.DeparmentList, "Value", "Text"), htmlAttributes: new { @class = "form-control multiselectdropdown", multiple = true, style = "width:100%;" })
                                @Html.ValidationMessageFor(r => Model.DepartmentIds, null, htmlAttributes: new { style = "color:red;" })
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-1">
                        <div class="form-group">
                            <br />
                            <div class="select">
                                <h5><a href="#" type="button" class="btn btn-success" onclick="getStaffDetailReport()" value="Search"><i class="fa fa-search btnDefaultColor"></i> </a></h5>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-success pull-right" id="savebutton" type="button" onclick="CommonAjaxPost(this)">SAVE</button>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div id="attenDetailsDiv"></div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button class="btn btn-success" id="savebutton" type="button" onclick="CommonAjaxPost(this)">SAVE</button>
                <button class="btn btn-default" type="button" onclick="window.location.reload()">RESET</button>
            </div>
        </div>
    }
</section>

<script>
    function getStaffDetailReport() {
        var deptIDs = $('#DepartmentIds').val();
        if (deptIDs == null || deptIDs == "") {
            OpenMessegeAutoHideDiv('No Department selected..!', 'Info');
            return false;
        } else {
            deptIDs = deptIDs.toString();
        }

        $.ajax({
            type: "GET",
            beforeSend: function () {
                spinnerShow();
            },
            url: "../Staff_AttendanceRegister/_Staff_AttendanceRegister_Details",
            data: { AttenDate: $('#AttenDate').val(), DeptIds: deptIDs },
            error: function (xhr, status, error) {
                OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
            },
            success: function (result) {
                $('#attenDetailsDiv').html(result);
            },
            complete: function () {
                spinnerHide();
            }
        });
    }
</script>