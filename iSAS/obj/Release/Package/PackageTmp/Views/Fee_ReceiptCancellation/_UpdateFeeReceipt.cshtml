@model ISas.Entities.FeesEntities.ReceiptDetailModel
@{
    string feeType = "Fee";
    if (Model.FeeType == "T")
    {
        feeType = "Transport";
    }
}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="alert alert-info alert-dismissible" id="autoHideMsgDiv" style="z-index:1;position: absolute;min-width:98%;max-width:98%;display:none;">
            @*<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>*@
            <h4><i id="autoHideDivTitleIcon" class="icon fa fa-info"></i> <span id="autoHideDivTitle"> Alert! </span> </h4>
            <p id="autoHideDivMsg"> Info alert preview. This alert is dismissable.</p>
        </div>
    </div>
</div>

@using (Html.BeginForm("TempleteClassSetup_CRUD", "Fee_ReceiptCancellation", FormMethod.Post, htmlAttributes: new { }))
{
    @Html.HiddenFor(r => Model.ReceiptNo)
    @Html.HiddenFor(r => Model.FeeType)
    @Html.HiddenFor(r => Model.Mode)
    @Html.HiddenFor(r => Model.ERPNo)

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-condensed">
                <tr>
                    <th>Fee Type :   @Html.DisplayFor(r => feeType)</th>
                    <th>Mode : @Html.DisplayFor(r => Model.Mode) </th>
                    <th>Status : @Html.DisplayFor(r => Model.Status) </th>
                </tr>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="">@Html.LabelFor(r => Model.NewReceiptNo)</label>
                <div class="select">
                    @Html.TextBoxFor(m => m.NewReceiptNo, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(r => Model.NewReceiptNo, null, htmlAttributes: new { style = "color:red;" })
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
                <label for="">@Html.LabelFor(r => Model.Date)</label>
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @Html.TextBoxFor(m => m.Date, htmlAttributes: new { @class = "form-control pull-right date" })
                    @Html.ValidationMessageFor(r => Model.Date, null, htmlAttributes: new { style = "color:red;" })
                </div>
                <!-- /.input group -->
            </div>
        </div>

        @if (Model.Mode == "CHEQUE")
        {
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="form-group">
                    <label for="">@Html.LabelFor(r => Model.TransReferenceNo)</label>
                    <div class="select">
                        @Html.TextBoxFor(m => m.TransReferenceNo, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => Model.TransReferenceNo, null, htmlAttributes: new { style = "color:red;" })
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row" style="border-top:1px solid #808080;">
        <div class="col-md-12">
            <button style="margin-top:2%;margin-right:1%;" type="button" onclick="CommonAjaxPost(this); setTimeout(function () { GetReceiptDetails($('#hddnQueryFor').val()); $('#mainModalWithSave').modal('toggle'); }, 1500);" class="btn btn-success">SAVE</button>
            <button style="margin-top:2%;" type="button" class="btn btn-default" data-dismiss="modal">CLOSE</button>
        </div>
    </div>
}

<script>
    $(function () {
        $('.date').bootstrapDP({
            autoclose: true,
            format: 'dd/mm/yyyy'
        });
    });
</script>