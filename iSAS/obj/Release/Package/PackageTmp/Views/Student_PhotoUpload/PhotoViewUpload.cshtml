@model ISas.Web.ViewModels.Student_PhotoUploadViewModel

@{
    ViewBag.Title = "Photo Upload";
}

<section class="content-header">
    <h1>
        Photo Upload View
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li><a href="#">Students</a></li>
        <li><a href="#">Photo Upload View</a></li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label for="">Session</label>
                        <div class="select">
                            @Html.DropDownListFor(m => m.SelectedSessionId, Model.SessionList, new { @class = "form-control select2", style = "width:100%;", id = "ddlSessionList" })
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label for="">Class</label>
                        <div class="select">
                            @Html.DropDownListFor(m => m.SelectedClassId, Model.ClassList, "-- Select Class --", new { @class = "form-control select2", style = "width:100%;", id = "ddlClassList", dataChangeUrl = Url.Action("GetSectionsForClass") })
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label for="">Section</label>
                        <div class="select">
                            @Html.DropDownListFor(m => m.SelectedSectionId, Model.SectionList, new { @class = "form-control select2", style = "width:100%;", id = "ddlSectionList", dataChangeUrl = Url.Action("_GetClassPhotoViewList") })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="divAttendanceList">
                        @Html.Partial("_ClassPhotoViewListPartial", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script type="text/javascript">


    function myfunction() {
        var myTableArray = [];
        $('#AttendanceTable tr:not(:first)').each(function () {

            var tds = $(this).find('td');
            var myDets = {
                studentERPNo: $(tds[0]).html(), StudentMorningAttendnace: $(tds[6]).text(),
                StudentAfternoonAttendnace: $(tds[7]).text(), StudentLeaveType: $(tds[8]).find(":selected").val()
            }
            myTableArray.push(myDets);
        });
        return myTableArray;
    }
    $(document).ready(function () {


        $(document).on('change', "#ddlClassList", function () {
            $.ajax({
                url: $('#ddlClassList').attr('dataChangeUrl'),
                data: { classId: $('#ddlClassList').val() },
                type: 'get',
                success: (function (data) {
                    var $ddlSec = $('#ddlSectionList');
                    $ddlSec.empty();
                    $ddlSec.append($("<option />").text("--- Select Section ---"));
                    $.each(data, function () {
                        $ddlSec.append($("<option />").val(this.SecId).text(this.SecName));
                    });
                }),
                error: function (xhr, status, error) {
                    OpenMessegeModal($('#ErrorMsgOnJasonFailed').val());
                },
            })
        });

        $(document).on('change', "#ddlSectionList", function () {
            $.ajax({
                url: $('#ddlSectionList').attr('dataChangeUrl'),
                data: { sessionId: $('#ddlSessionList').val(), classId: $('#ddlClassList').val(), sectionId: $('#ddlSectionList').val(), attdate: $('#student_attendance_date').val() },
                type: 'get',
                success: (function (data) {
                    $('#divAttendanceList').empty();
                    $('#divAttendanceList').html(data);
                    //alert(data);
                }),
                error: function (xhr, status, error) {
                    OpenMessegeModal($('#ErrorMsgOnJasonFailed').val());
                }
            })
        });
    });

</script>


