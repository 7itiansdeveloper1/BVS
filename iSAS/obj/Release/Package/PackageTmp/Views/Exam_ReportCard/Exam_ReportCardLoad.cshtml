@model ISas.Web.ViewModels.Exam_ReportCardViewModel

@{
    ViewBag.Title = "Report card";
}
<section class="content-header">
    <h1>
        Report Card
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li>CCE Exam Module</li>
        <li class="active">Report Card</li>
    </ol>
</section>
<section class="content">
    @using (Html.BeginForm("StudentReportCard_Multi", "Exam_ReportCard", FormMethod.Post, htmlAttributes: new { }))
    {
        @Html.HiddenFor(r=> Model.SelectedExamName)

        <div class="box box-primary">
            <div class="box-header with-border">
                <h5 class="box-title pull-right">
                    <input type="submit" class="btn btn-primary btn-sm" value="Download Selected" onclick="return checkToSubmitForm();" />
                </h5>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">Session</label>
                            <div class="select">
                                @Html.HiddenFor(r=> Model.SelectedSessionId)
                                @Html.DropDownListFor(m => m.SelectedSessionId, Model.SessionList, new { @class = "form-control select2", style = "width:100%;", id = "SelectedSessionId" , disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">Term</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.SelectedExamId, Model.ExamList, "-- Select Exam --", new { @class = "form-control select2", style = "width:100%;", id = "ddlExamList", dataChangeUrl = Url.Action("BindClassddl") })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">Class</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.SelectedClassId, Model.ClassList, new { @class = "form-control select2", style = "width:100%;", id = "ddlClassList", dataChangeUrl = Url.Action("BindSectionddl") })
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="">Section</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.SelectedSectionId, Model.SectionList, new { @class = "form-control select2", style = "width:100%;", id = "ddlSectionList", dataChangeUrl = Url.Action("BindClassStudentsGrid") })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div id="divClassStudentList">
                        @Html.Partial("_ClassStudentsListPartial")
                    </div>
                </div>
            </div>
        </div>
    }
</section>
<script type="text/javascript">
    function Fun_CheckToSelectAllChkBox() {
        if ($('#chkBoxSelectAll').is(':checked')) {
            $('.chkBoxstudent').prop('checked', true);
        } else {
            $('.chkBoxstudent').prop('checked', false);
        }
    }

    function checkToSubmitForm() {
        var checkedCount = 0;
        $('#MarkTable > tbody > tr').each(function (i) {
            if ($('#ClassStudentsList_' + i + '__Select').is(':checked')) {
                checkedCount++;
            }
        });

        if (checkedCount > 0) {
            return true;
        } else {
            OpenMessegeAutoHideDiv('No student is selected..!', 'Info');
            return false;
        }
    }

    function myfunction() {
        var myTableArray = [];
        $('#MarkTable tr:not(:first)').each(function () {
            var tds = $(this).find('td');
            var myDets;
            myDets = {
                studentERPNo: $(tds[0]).html()
                , IsStudentAbsent: $(tds[4]).find('input[type="checkbox"]').is(':checked'),
                IsStudentML: $(tds[5]).find('input[type="checkbox"]').is(':checked'),
                IsStudentExempt: $(tds[6]).find('input[type="checkbox"]').is(':checked'),
                StudentMark: $(tds[7]).find(":text").val()
                , StudentGrade: $(tds[8]).find(":text").val()
            }
            myTableArray.push(myDets);
        });
        return myTableArray;
    }
    $(document).ready(function () {
        $(document).on('change', "#ddlExamList", function () {
            $.ajax({
                url: $('#ddlExamList').attr('dataChangeUrl'),
                data: { examId: $('#ddlExamList').val() },
                type: 'get',
                success: (function (data) {
                    $('#SelectedExamName').val($('#ddlExamList option:selected').text());

                    var $ddlClass = $('#ddlClassList');
                    $ddlClass.empty();
                    $('#ddlSectionList').empty();
                    $('#ddlSubjectList').empty();
                    $('#ddlAssessmentList').empty();
                    $ddlClass.append($("<option />").text("--- Select Class ---"));
                    $.each(data, function () {
                        $ddlClass.append($("<option />").val(this.ClassId).text(this.ClassName));
                    });
                }),
                fail  :(function (error) {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
                })
            })
        });
        $(document).on('change', "#ddlClassList", function () {
            $.ajax({
                url: $('#ddlClassList').attr('dataChangeUrl'),
                data: { classId: $('#ddlClassList').val(), examId: $('#ddlExamList').val() },
                type: 'get',
                success : (function (data) {
                    var $ddlSec = $('#ddlSectionList');
                    $ddlSec.empty();
                    $('#ddlSubjectList').empty();
                    $('#ddlAssessmentList').empty();
                    $ddlSec.append($("<option />").text("--- Select Section ---"));
                    $.each(data, function () {
                        $ddlSec.append($("<option />").val(this.SectionId).text(this.SectionName));
                    });
                }),
                fail :(function (error) {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
                })
            })
        });

        $(document).on('change', "#ddlSectionList", function () {
            $.ajax({
                url: $('#ddlSectionList').attr('dataChangeUrl'),
                data: {
                    classId: $('#ddlClassList').val(), sectionId: $('#ddlSectionList').val(),
                    sessionId: $('#SelectedSessionId').val(), examId: $('#ddlExamList').val(),
                    SelectedExamName: $('#ddlExamList option:selected').text()
                },
                type: 'get',
                success  :(function (data) {
                    $('#divClassStudentList').empty();
                    $('#divClassStudentList').html(data);
                }),
                fail : (function (error) {
                    OpenMessegeAutoHideDiv($('#ErrorMsgOnJasonFailed').val(), 'Danger');
                })
            })
        });
    });
</script>

