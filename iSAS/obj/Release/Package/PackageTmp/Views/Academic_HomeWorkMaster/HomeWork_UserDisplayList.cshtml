@using ISas.Web.Models;
@model List<ISas.Entities.Academic.Academic_HomeWorkMasterModels>

<section class="content-header">
    <h1>@ViewBag.labelName</h1>
    <ol class="breadcrumb">
        <li>
            <a href="javascript: history.go(-1)" title="Back"><i class="fa fa-arrow-left"></i> </a> |
            <a href="#" onclick="window.location.reload()" title="Refresh"><i class="fa fa-refresh"></i></a> |
            <a href="@Url.Action("Dashboard", "Dashboard")" title="Dashboard"><i class="fa fa-dashboard"></i></a>
        </li>
        <li class="active">@ViewBag.labelName</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-body" style="overflow-y:scroll;">
            <table id="example1" class="table table-responsive table-bordered table-condensed display nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Submission Date</th>
                        <th><i class="fa fa-download"></i> Attachments</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 1;
                        for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(r => count)</td>
                                <td>@Html.DisplayFor(r => Model[i].Title)</td>
                                <td>@Html.DisplayFor(r => Model[i].UploadDate)</td>
                                <td>@Html.DisplayFor(r => Model[i].SubmissionDate)</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(Model[i].AttachmentReference))
                                    {
                                        List<string> attachments = Model[i].AttachmentReference.Split(',').ToList();
                                        <div class="attachment">
                                            <p class="filename">
                                                @for (int j = 0; j < @attachments.Count; j++)
                                                {
                                                    string commaStr = "";
                                                    if (j > 0)
                                                    {
                                                        commaStr = ", ";
                                                    }
                                                    @Html.DisplayFor(r => commaStr)
                                                    <a class="text-sm" href="~/@attachments[j]" download="@attachments[j].Substring(@attachments[j].LastIndexOf('@') + 1)">@attachments[j].Substring(@attachments[j].LastIndexOf('@') + 1)</a>
                                                }
                                            </p>
                                        </div>
                                    }
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    var msg = '@ViewBag.Msg';
    var color = '@ViewBag.Color';
    if (msg != null && msg != '') {
        OpenMessegeAutoHideDiv(msg, color);
    }

    $(function () {
        $('#example1').DataTable({
            "pageLength": 50,
        });
    });
</script>